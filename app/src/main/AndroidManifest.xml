<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.loitp.livestar">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="vn.loitp.app.app.LSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="vn.loitp.app.activity.MenuActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="vn.loitp.app.activity.api.test.TestAPIActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.customviews.placeholderview.PlaceHolderViewMenuActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.customviews.placeholderview.androidnavigationdrawer.AndroidNavigationDrawerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.customviews.placeholderview.androidbeginnerimagegallery.AndroidBeginnerImageGalleryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.customviews.placeholderview.androidadvanceimagegallery.AndroidAdvanceImageGalleryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.customviews.placeholderview.androidexpandablenewsfeed.AndroidExpandableNewsFreedActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.customviews.placeholderview.androidtinderswipe.AndroidTinderSwipeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.customviews.placeholderview.androidinfinitelistwithloadmore.AndroidInfiniteListWithLoadMoreActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.api.MenuAPIActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.customviews.MenuCustomViewsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.demo.MenuDemoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.api.galleryAPI.GalleryAPIActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.demo.gallery.GalleryDemoSplashActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.demo.gallery.GalleryDemoAlbumActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.demo.gallery.GalleryDemoPhotosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.app.activity.demo.gallery.GalleryDemoSlideActivity"
            android:screenOrientation="portrait" />

        <!--FOR ALARM DEMO APP-->
        <activity
            android:name="vn.loitp.app.activity.demo.alarmdemoapp.activity.AlarmMeActivity"
            android:label="@string/app_name">

            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
        </activity>

        <activity
            android:name="vn.loitp.app.activity.demo.alarmdemoapp.activity.EditAlarmActivity"
            android:label="Edit alarm" />

        <activity
            android:name="vn.loitp.app.activity.demo.alarmdemoapp.activity.AlarmNotification"
            android:label="Alarm notification" />

        <activity
            android:name="vn.loitp.app.activity.demo.alarmdemoapp.service.Preferences"
            android:label="Preferences" />

        <receiver
            android:name="vn.loitp.app.activity.demo.alarmdemoapp.service.AlarmReceiver"
            android:process=":remote" />

        <receiver android:name="vn.loitp.app.activity.demo.alarmdemoapp.service.BootCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>
        <!--FOR ALARM DEMO APP-->

    </application>
</manifest>