<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/w_65">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lbutton_change_drawable_of_pressed_state_programmatically_with_one_line_code_lbutton_setpresseddrawable"
                android:textColor="?attr/themeTextColor"
                android:textSize="@dimen/txt_medium" />

            <com.loitpcore.views.button.lButton.LButton
                android:id="@+id/bt0"
                android:layout_width="@dimen/w_100"
                android:layout_height="@dimen/w_100"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/l_heart" />

            <com.loitpcore.views.button.lButton.LButton
                android:id="@+id/bt1"
                android:layout_width="@dimen/w_100"
                android:layout_height="@dimen/w_100"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />

            <com.loitpcore.views.button.lButton.LButton
                android:id="@+id/bt2"
                android:layout_width="@dimen/w_80"
                android:layout_height="@dimen/w_80"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/l_heart_icon" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.loitpcore.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
