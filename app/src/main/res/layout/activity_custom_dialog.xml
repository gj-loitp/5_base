<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btToggleFullScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_primary"
        android:text="@string/toggle_fullscreen" />

    <Button
        android:id="@+id/btShowDialog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bt_primary"
        android:text="Show" />

    <Button
        android:id="@+id/btShowDialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btToggleFullScreen"
        android:background="@drawable/bt_primary"
        android:text="Show" />

    <Button
        android:id="@+id/btShowDialog3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btToggleFullScreen"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bt_primary"
        android:text="Show" />
</RelativeLayout>

