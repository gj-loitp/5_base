<?xml version="1.0" encoding="utf-8"?>
<com.views.layout.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:srl_mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/w_70"
        android:background="#ffcc0000">

        <TextView
            android:layout_width="@dimen/w_70"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/front_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_70">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5"
            android:background="@color/DarkCyan"
            android:gravity="center"
            android:padding="@dimen/padding_5"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_18" />
    </FrameLayout>
</com.views.layout.swipereveallayout.SwipeRevealLayout>