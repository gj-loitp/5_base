<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Function Menu"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/bt_activity_service_comunicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activity Service Comunicate" />

            <Button
                android:id="@+id/bt_drag_drop_sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drag drop sample" />

            <Button
                android:id="@+id/bt_toggle_fullscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toggle fullscreen" />

            <Button
                android:id="@+id/bt_gesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gesto" />

            <Button
                android:id="@+id/bt_glide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glide" />

            <Button
                android:id="@+id/bt_hashmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hashmap" />

            <Button
                android:id="@+id/bt_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location" />

            <Button
                android:id="@+id/bt_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification" />

            <Button
                android:id="@+id/bt_recolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recolor" />

            <Button
                android:id="@+id/bt_scrog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scrog" />

            <Button
                android:id="@+id/bt_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensor" />

            <Button
                android:id="@+id/bt_sensor_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensor Video" />

            <Button
                android:id="@+id/bt_simple_finger_gesture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simple finger gestures" />

            <Button
                android:id="@+id/bt_view_drag_helper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ViewDragHelper" />

            <Button
                android:id="@+id/bt_view_drag_helper_simple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ViewDragHelper simple" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

