<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_activity_service_comunicate"
                style="@style/ButtonMenu"
                android:text="@string/activity_service_comunicate" />

            <Button
                android:id="@+id/btDownloadManager"
                style="@style/ButtonMenu"
                android:text="Download manager" />

            <Button
                android:id="@+id/bt_drag_drop_sample"
                style="@style/ButtonMenu"
                android:text="@string/drag_drop_sample" />

            <Button
                android:id="@+id/bt_toggle_fullscreen"
                style="@style/ButtonMenu"
                android:text="@string/toggle_fullscreen" />

            <Button
                android:id="@+id/bt_gesto"
                style="@style/ButtonMenu"
                android:text="@string/gesto" />

            <Button
                android:id="@+id/bt_glide"
                style="@style/ButtonMenu"
                android:text="@string/glide" />

            <Button
                android:id="@+id/bt_hashmap"
                style="@style/ButtonMenu"
                android:text="@string/hashmap" />

            <Button
                android:id="@+id/bt_keyboard"
                style="@style/ButtonMenu"
                android:text="@string/keyboard" />

            <Button
                android:id="@+id/bt_location"
                style="@style/ButtonMenu"
                android:text="@string/location" />

            <Button
                android:id="@+id/bt_notification"
                style="@style/ButtonMenu"
                android:text="@string/notification" />

            <Button
                android:id="@+id/bt_recolor"
                style="@style/ButtonMenu"
                android:text="@string/recolor" />

            <Button
                android:id="@+id/bt_sensor"
                style="@style/ButtonMenu"
                android:text="@string/sensor" />

            <Button
                android:id="@+id/bt_simple_finger_gesture"
                style="@style/ButtonMenu"
                android:text="@string/simple_finger_gestures" />

            <Button
                android:id="@+id/bt_view_drag_helper"
                style="@style/ButtonMenu"
                android:text="@string/viewdraghelper" />

            <Button
                android:id="@+id/bt_view_drag_helper_simple"
                style="@style/ButtonMenu"
                android:text="@string/viewdraghelper_simple" />

            <Button
                android:id="@+id/bt_view_drag_helper_simple_1"
                style="@style/ButtonMenu"
                android:text="@string/viewdraghelper_simple_1" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/function_menu" />
</RelativeLayout>

