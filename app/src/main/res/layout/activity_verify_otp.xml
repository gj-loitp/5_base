<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context="vn.puresolutions.livestarv3.activity.login.VerifyOtpActivity">

    <vn.puresolutions.livestarv3.view.LActionBar
        android:id="@+id/labOtpScreen_labHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvOtpScreen_OTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labOtpScreen_labHeader"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:gravity="bottom"
        android:text="@string/loginscreen_signup_verify_phonenum_label" />

    <TextView
        android:id="@+id/tvOtpScreen_TopDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOtpScreen_OTP"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_5"
        android:gravity="center"
        android:text="@string/loginscreen_forgot_title_otp_topdetail"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lnlOtpScreen_Otp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/tvOtpScreen_TopDetail"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtOtpScreen_NumOne"
            style="@style/edit_text_common"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/background_register_edittext"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:textSize="@dimen/text_size_45" />

        <EditText
            android:id="@+id/edtOtpScreen_NumTwo"
            style="@style/edit_text_common"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/background_register_edittext"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:textSize="@dimen/text_size_45" />

        <EditText
            android:id="@+id/edtOtpScreen_NumThree"
            style="@style/edit_text_common"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/background_register_edittext"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:textSize="@dimen/text_size_45" />

        <EditText
            android:id="@+id/edtOtpScreen_NumFour"
            style="@style/edit_text_common"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/background_register_edittext"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:textSize="@dimen/text_size_45" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvOtpScreen_Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnlOtpScreen_Otp"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:text="@string/loginscreen_signup_verify_phonenum_description" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOtpScreen_Detail"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOtpScreen_Resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="@dimen/margin_15"
            android:background="@drawable/background_loginscreen_btnskip"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20"
            android:text="@string/loginscreen_signup_resend_phonenum_btn"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnOtpScreen_Verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_toRightOf="@+id/btnOtpScreen_Resend"
            android:background="@drawable/background_button_non_enable"
            android:enabled="false"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20"
            android:text="@string/loginscreen_signup_verify_phonenum_btn"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>
