<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_65"
        android:background="@drawable/bkg_primary_black"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_10"
        android:paddingTop="@dimen/padding_5"
        android:paddingRight="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_5"
        android:textColor="@color/White"
        android:textSize="@dimen/txt_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/padding_5"
        android:text="@string/no_data"
        android:textColor="@color/Gray"
        android:textSize="@dimen/txt_14"
        android:visibility="gone" />

    <vn.loitp.views.progressloadingview.avloadingindicatorview.lib.avi.AVLoadingIndicatorView
        android:id="@+id/avl"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="@dimen/w_30"
        android:layout_height="@dimen/w_30"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="LineScalePulseOutRapidIndicator" />
</RelativeLayout>

