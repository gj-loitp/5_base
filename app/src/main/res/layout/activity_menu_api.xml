<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/bt_2"
                style="@style/ButtonMenu"
                android:text="@string/gallery_api" />

            <Button
                android:id="@+id/bt_test_retrofit2"
                style="@style/ButtonMenu"
                android:text="@string/test_retrofit2" />

            <Button
                android:id="@+id/bt_3"
                style="@style/ButtonMenu"
                android:text="@string/truyen_tranh_api" />

            <Button
                style="@style/ButtonMenu"
                android:text="@string/truyen_chu_api"
                android:visibility="gone" />

            <Button
                style="@style/ButtonMenu"
                android:text="@string/translate_api"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/menu_api" />
</RelativeLayout>

