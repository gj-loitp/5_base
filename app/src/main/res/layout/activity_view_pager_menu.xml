<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    tools:ignore="HardcodedText">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMenu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAutoViewPager"
                style="@style/ButtonMenu"
                android:text="Auto ViewPager" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDetectViewPagerSwipeOut"
                style="@style/ButtonMenu"
                android:text="Detect ViewPager SwipeOut" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDetectViewPagerSwipeOut2"
                style="@style/ButtonMenu"
                android:text="Detect ViewPager SwipeOut 2 (Nice)" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btLockableViewPager"
                style="@style/ButtonMenu"
                android:text="LockableViewPager" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btParallaxViewPager"
                style="@style/ButtonMenu"
                android:text="Parallax ViewPager" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRefreshViewPager"
                style="@style/ButtonMenu"
                android:text="Refresh ViewPager" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btVerticalViewPager"
                style="@style/ButtonMenu"
                android:text="Vertical ViewPager" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btViewPager2"
                style="@style/ButtonMenu"
                android:text="ViewPager 2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btViewPagerTabLayout"
                style="@style/ButtonMenu"
                android:text="ViewPager With Tablayout + transformers" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="View Pager Menu" />
</RelativeLayout>
