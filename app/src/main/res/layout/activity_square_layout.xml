<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    android:orientation="vertical">

    <com.loitp.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/w_65">

            <com.loitpcore.views.layout.square.LSquareFrameLayout
                android:layout_width="@dimen/w_50"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@color/blue" />

            <com.loitpcore.views.layout.square.LSquareFrameLayout
                android:layout_width="@dimen/w_250"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@color/green" />

            <com.loitpcore.views.layout.square.LSquareFrameLayout
                android:layout_width="@dimen/w_80"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@color/red" />

            <com.loitpcore.views.layout.square.LSquareFrameLayout
                android:layout_width="@dimen/w_100"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@color/pink" />

            <com.loitpcore.views.layout.square.LSquareFrameLayout
                android:layout_width="@dimen/w_250"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@color/purple" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
