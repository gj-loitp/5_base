<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAppcompatSwitch"
                style="@style/ButtonMenu"
                android:text="Appcompat Switch" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCustomToggleButton"
                style="@style/ButtonMenu"
                android:text="Custom Toggle Button" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btToggle"
                style="@style/ButtonMenu"
                android:text="Toggle" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btToggleButtonGroup"
                style="@style/ButtonMenu"
                android:text="Toggle Button Group" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Switch Toggle Menu" />
</RelativeLayout>
