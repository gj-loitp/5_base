<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepPink"
    android:orientation="vertical">

    <com.loitpcore.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_medium">

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/circle_iv"
                android:layout_width="@dimen/w_170"
                android:layout_height="@dimen/w_170"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:scaleType="centerCrop"
                android:translationZ="3dp"
                app:cornerRadius="1000dp"
                tools:src="@drawable/loitp" />

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/rounded_iv"
                android:layout_width="@dimen/w_170"
                android:layout_height="@dimen/w_170"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:scaleType="centerCrop"
                android:translationZ="3dp"
                app:cornerRadius="16dp"
                app:roundedCorners="all"
                tools:src="@drawable/loitp" />

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/rounded_iv_1"
                android:layout_width="@dimen/w_170"
                android:layout_height="@dimen/w_170"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:elevation="3dp"
                android:scaleType="centerCrop"
                app:cornerRadius="16dp"
                app:roundedCorners="top"
                tools:src="@drawable/loitp" />

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/rounded_iv_2"
                android:layout_width="@dimen/w_170"
                android:layout_height="@dimen/w_170"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:elevation="3dp"
                android:scaleType="centerCrop"
                app:cornerRadius="1000dp"
                app:roundedCorners="topRight|bottomLeft"
                tools:src="@drawable/loitp" />

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/rounded_iv_4"
                android:layout_width="@dimen/w_170"
                android:layout_height="@dimen/w_170"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:elevation="3dp"
                android:padding="8dp"
                app:cornerRadius="1000dp"
                app:reverseMask="true"
                tools:src="@drawable/loitp" />

            <com.rishabhharit.roundedimageview.RoundedImageView
                android:id="@+id/rounded_iv_5"
                android:layout_width="@dimen/w_170"
                android:layout_height="@dimen/w_170"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:elevation="3dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                app:cornerRadius="8dp"
                app:reverseMask="true"
                tools:src="@drawable/loitp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
