<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Light_Cyan"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/txt_8" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_toast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show toast" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_alpha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable/Disable alpha" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_revert_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable/Disable isEnableRevertMaxSize" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_maximize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maximize" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_minimize_bottom_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimize Bottom Left" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_minimize_bottom_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimize Bottom Right" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_minimize_top_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimize Top Right"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_minimize_top_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimize Top Left"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_slide_to_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slide to position" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_show_hide_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show/Hide header" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_show_hide_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show/Hide body" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_appear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Appear" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/bt_disappear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disappear" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_10"
                    android:text="@string/large_text" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <vn.loitp.app.activity.function.viewdraghelpersimple.VDHView
        android:id="@+id/vdhv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/header_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_200"
            android:scaleType="centerCrop"
            android:src="@drawable/loitp" />

        <ScrollView
            android:id="@+id/body_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Gray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:text="@string/large_text"
                android:textColor="@color/White" />
        </ScrollView>
    </vn.loitp.app.activity.function.viewdraghelpersimple.VDHView>
</RelativeLayout>

