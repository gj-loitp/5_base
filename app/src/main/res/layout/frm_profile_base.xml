<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/view_space"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize" />

            <FrameLayout
                android:id="@+id/flProfileScreen_Avatar"
                android:layout_width="@dimen/w_100"
                android:layout_height="@dimen/w_100"
                android:layout_below="@+id/view_space"
                android:layout_centerHorizontal="true">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sdvProfileScreen_Avatar"
                    android:layout_width="@dimen/w_100"
                    android:layout_height="@dimen/w_100"
                    android:layout_gravity="center"
                    fresco:placeholderImage="@color/WhiteSmoke"
                    fresco:placeholderImageScaleType="fitCenter"
                    fresco:roundAsCircle="true" />

                <ImageView
                    android:layout_width="@dimen/w_25"
                    android:layout_height="@dimen/h_25"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="@dimen/margin_5"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_temp_avatar"
                    android:visibility="gone" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvProfileScreen_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/flProfileScreen_Avatar"
                android:layout_centerHorizontal="true" />

            <vn.puresolutions.livestarv3.view.LTextViewHorizontal
                android:id="@+id/lthProfileScreen_Level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvProfileScreen_Name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_marginTop="@dimen/margin_5" />

            <LinearLayout
                android:id="@+id/cvProfileScreen_IdolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lthProfileScreen_Level"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lnlProfileScreen_Following"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_10">

                    <TextView
                        android:id="@+id/tvProfileScreen_Following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_28" />

                    <TextView
                        android:id="@+id/tv_following"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang theo dõi"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/txt_10" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/w_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/LightGrey" />

                <LinearLayout
                    android:id="@+id/lnlProfileScreen_Follower"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/lnlProfileScreen_Following"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_10">

                    <TextView
                        android:id="@+id/tvProfileScreen_Follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_28" />

                    <TextView
                        android:id="@+id/tv_follower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người theo dõi"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/txt_10" />
                </LinearLayout>

                <View
                    android:id="@+id/line_2"
                    android:layout_width="@dimen/w_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:layout_marginTop="@dimen/margin_15"
                    android:background="@color/LightGrey" />

                <LinearLayout
                    android:id="@+id/lnlProfileScreen_Video"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/lnlProfileScreen_Follower"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_10"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvProfileScreen_Video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Video"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/txt_10" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cvProfileScreen_IdolBar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <vn.puresolutions.livestarv3.activity.homescreen.fragment.profile.view.LRowProflieAction
                        android:id="@+id/rpaProperty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10" />

                    <vn.puresolutions.livestarv3.activity.homescreen.fragment.profile.view.LRowProflieAction
                        android:id="@+id/rpaRoomManager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rpaProperty" />

                    <vn.puresolutions.livestarv3.activity.homescreen.fragment.profile.view.LRowProflieAction
                        android:id="@+id/rpaSettingNoti"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rpaRoomManager" />

                    <LinearLayout
                        android:id="@+id/lnlLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rpaSettingNoti"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/padding_20"
                        android:paddingLeft="@dimen/padding_10"
                        android:paddingRight="@dimen/margin_10"
                        android:paddingTop="@dimen/padding_20">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.7"
                            android:gravity="right">

                            <ImageView
                                android:layout_width="@dimen/w_15"
                                android:layout_height="@dimen/w_15"
                                android:contentDescription="@string/app_name"
                                android:src="@drawable/back"
                                android:tint="@color/Gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvProfileScreen_Logout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/margin_10"
                            android:layout_weight="3"
                            android:gravity="center_vertical"
                            android:text="@string/profilescreen_logout" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view_dummy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/h_100"
                        android:layout_below="@+id/lnlLogout" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w_15"
                        android:layout_below="@+id/view_dummy"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bkg_shadow_white_black" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w_15"
                    android:background="@drawable/bkg_shadow_black_white" />
            </FrameLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <vn.puresolutions.livestarv3.view.LActionBar
        android:id="@+id/tvProfileScreen_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>