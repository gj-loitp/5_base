<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <com.loitpcore.views.layout.flowlayout.FlowLayout
            android:id="@+id/flowLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_padding_medium"
            android:paddingTop="@dimen/w_65"
            android:paddingEnd="@dimen/margin_padding_medium"
            app:flChildSpacing="@dimen/w_25"
            app:flChildSpacingForLastRow="100dp"
            app:flFlow="true"
            app:flMaxRows="3"
            app:flMinChildSpacing="30dp"
            app:flRowSpacing="@dimen/margin_padding_medium"
            app:flRowVerticalGravity="top"
            app:flRtl="false">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@drawable/bt_tag"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_medium" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@drawable/bt_tag"
                android:text="11111111111111111111111"
                android:textColor="@color/red"
                android:textSize="@dimen/txt_medium" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@drawable/bt_tag"
                android:text="2222222222222222222222222222"
                android:textColor="@color/blue"
                android:textSize="@dimen/txt_medium" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@drawable/bt_tag"
                android:text="3333"
                android:textColor="@color/green"
                android:textSize="@dimen/txt_large" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@drawable/bt_tag"
                android:text="4444444444444444444444444444444444444444444444444"
                android:textColor="@color/gray"
                android:textSize="@dimen/txt_largest" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_medium"
                android:background="@drawable/bt_tag"
                android:text="55555555555555555555555555555555"
                android:textColor="@color/red"
                android:textSize="@dimen/txt_medium" />
        </com.loitpcore.views.layout.flowlayout.FlowLayout>
    </androidx.core.widget.NestedScrollView>

    <com.loitpcore.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>

