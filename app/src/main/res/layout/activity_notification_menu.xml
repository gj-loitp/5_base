<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Notification Menu"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/simpleNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="simple notification" />

            <Button
                android:id="@+id/simpleNotificationActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="simple notification with actions" />


            <Button
                android:id="@+id/bigTextNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="big text notification" />

            <Button
                android:id="@+id/inboxNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="inbox notification" />

            <Button
                android:id="@+id/bigPictureNotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="big picture notification" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

