<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSimpleNotification"
                style="@style/ButtonMenu"
                android:text="simple notification" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSimpleNotificationActions"
                style="@style/ButtonMenu"
                android:text="simple notification with actions" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btBigTextNotification"
                style="@style/ButtonMenu"
                android:text="big text notification" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btInboxNotification"
                style="@style/ButtonMenu"
                android:text="inbox notification" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btBigPictureNotification"
                style="@style/ButtonMenu"
                android:text="big picture notification" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btNotificationHeadsup"
                style="@style/ButtonMenu"
                android:text="Notifcation headsup" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btNotificationHeadsupNice"
                style="@style/ButtonMenu"
                android:text="Notifcation headsup (Nice)" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Notification Menu" />
</RelativeLayout>
