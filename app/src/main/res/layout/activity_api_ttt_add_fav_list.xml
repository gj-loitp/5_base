<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_title"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_add_vuongphongloi"
                style="@style/ButtonMenu"
                android:text="Thêm truyện Vương Phong Lôi I" />

            <Button
                android:id="@+id/bt_add_layers"
                style="@style/ButtonMenu"
                android:text="Thêm truyện Layers" />

            <Button
                android:id="@+id/bt_add_blackhaze"
                style="@style/ButtonMenu"
                android:text="Thêm truyện Black Haze" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/padding_15"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_10" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_title"
        style="@style/TextMenu"
        android:text="Test add truyện" />

    <com.views.progressloadingview.avl.LAVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="@dimen/w_50"
        android:layout_height="@dimen/w_50"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="PacmanIndicator" />
</RelativeLayout>