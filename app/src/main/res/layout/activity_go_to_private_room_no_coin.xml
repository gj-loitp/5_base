<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <vn.puresolutions.livestarv3.view.LActionBar
        android:id="@+id/l_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll_ask_save_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l_action_bar"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:gravity="center"
            android:text="@string/not_enoght_coint"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/ticket_price"
                android:textColor="@color/White"
                android:textSize="@dimen/txt_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="10"
                android:textColor="@color/White"
                android:textSize="@dimen/txt_40" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xu"
                android:textColor="@color/White"
                android:textSize="@dimen/txt_24"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_get_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_chat_orange"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_10"
                android:paddingLeft="@dimen/padding_35"
                android:paddingRight="@dimen/padding_35"
                android:paddingTop="@dimen/padding_10"
                android:text="@string/get_coin_all_cap"
                android:textColor="@color/White" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>