<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <com.loitpcore.views.layout.circularView.CircularView
        android:id="@+id/circularView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:centerBackgroundColor="@color/lightYellow"
        app:centerDrawable="@drawable/ic_launcher_loitp" />

    <com.loitpcore.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
