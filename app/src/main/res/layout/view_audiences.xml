<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/audiences_view_width"
    android:layout_height="match_parent"
    android:background="@color/backgroundRoomView"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/viewAudiences_rclAudiences"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/viewAudiences_tvNoData"
        style="@style/text_view_white"
        android:layout_gravity="center"
        android:padding="@dimen/view_padding_large"
        android:text="@string/there_are_no_data"
        android:visibility="gone" />

</FrameLayout>