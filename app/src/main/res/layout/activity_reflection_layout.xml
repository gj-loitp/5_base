<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    android:orientation="vertical">

    <com.loitp.views.ab.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:reflect_gap="5dp"
        app:reflect_relativeDepth="0.5">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/w_300"
            android:scaleType="centerCrop"
            android:src="@drawable/loitp" />
    </com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer>
</androidx.appcompat.widget.LinearLayoutCompat>
