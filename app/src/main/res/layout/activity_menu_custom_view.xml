<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Menu Custom View"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_20" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_place_holder_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place holder view" />

            <Button
                android:id="@+id/bt_view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Pager" />

            <Button
                android:id="@+id/bt_keyword_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keyword/Hot tags" />

            <Button
                android:id="@+id/bt_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

            <Button
                android:id="@+id/bt_progress_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress/Loading View" />

            <Button
                android:id="@+id/bt_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Switch" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

