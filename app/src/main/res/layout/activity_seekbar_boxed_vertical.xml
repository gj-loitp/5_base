<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColorMedium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.views.seekbar.boxedvertical.LBoxedVertical
                android:id="@+id/boxedVertical"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_55"
                android:layout_marginBottom="@dimen/margin_55"
                app:backgroundColor="@color/lightBlue"
                app:cornerRadius_boxed="20"
                app:defaultValueBoxedVertical="50"
                app:imageEnabled_boxed="false"
                app:max_boxed="100"
                app:progressColor="@color/blue"
                app:step="1"
                app:textBottomPadding="20"
                app:textColor_boxed="@color/red"
                app:textEnabled_boxed="true"
                app:textSize_boxed="8sp"
                app:touchDisabled_boxed="false" />
        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_medium"
                android:textColor="?attr/themeTextColor" />
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

