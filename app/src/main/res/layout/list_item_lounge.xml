<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/view_padding_medium"
    android:paddingBottom="@dimen/view_padding_medium">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/loungesItem_imgChair"
            android:layout_width="@dimen/lounge_image_chair_width"
            android:layout_height="@dimen/lounge_image_chair_height"
            android:contentDescription="@null"
            android:src="@drawable/img_chair" />

        <TextView
            android:id="@+id/loungesItem_tvName"
            style="@style/text_view_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loungesItem_imgChair"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/view_margin_micro" />

        <TextView
            android:id="@+id/loungesItem_tvPrice"
            style="@style/text_view_money"
            android:layout_alignBottom="@id/loungesItem_imgChair"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/view_margin_small" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/loungesItem_imgAvatar"
            android:layout_width="@dimen/lounge_avatar_size"
            android:layout_height="@dimen/lounge_avatar_size"
            android:layout_alignLeft="@id/loungesItem_imgChair"
            android:layout_alignTop="@id/loungesItem_imgChair"
            android:layout_marginLeft="@dimen/lounge_avatar_marginLeft"
            android:layout_marginTop="@dimen/lounge_avatar_marginTop"
            fresco:actualImageScaleType="fitCenter"
            fresco:roundAsCircle="true" />

        <ProgressBar
            android:id="@+id/loadingItem_pgbLoading"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</LinearLayout>