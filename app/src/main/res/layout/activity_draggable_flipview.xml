<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <com.loitp.views.draggableFlipView.DraggableFlipView
        android:layout_width="@dimen/w_350"
        android:layout_height="@dimen/w_250"
        android:layout_centerInParent="true"
        app:backView="@layout/view_back"
        app:frontView="@layout/view_front" />

    <com.loitp.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>

