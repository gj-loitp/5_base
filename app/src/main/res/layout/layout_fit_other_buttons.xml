<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0277BD"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <com.github.nikartm.button.FitButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        app:fb_borderColor="#fff"
        app:fb_borderWidth="2dp"
        app:fb_icon="@drawable/ic_baseline_code_48"
        app:fb_iconHeight="24dp"
        app:fb_iconMarginStart="12dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="24dp"
        app:fb_shape="rectangle"
        app:fb_text="Facebook"
        app:fb_textColor="#FFF"
        app:fb_textPaddingStart="12dp" />

    <com.github.nikartm.button.FitButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        app:fb_borderColor="#fff"
        app:fb_borderWidth="2dp"
        app:fb_cornerRadius="7dp"
        app:fb_icon="@drawable/ic_bookmark_black_48dp"
        app:fb_iconHeight="24dp"
        app:fb_iconMarginStart="12dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="24dp"
        app:fb_shape="rectangle"
        app:fb_text="Log in with GitHub"
        app:fb_textColor="#FFF"
        app:fb_textPaddingStart="12dp" />

    <com.github.nikartm.button.FitButton
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:gravity="center_vertical"
        app:fb_borderColor="#fff"
        app:fb_borderWidth="2dp"
        app:fb_cornerRadius="20dp"
        app:fb_icon="@drawable/ic_zoom_out_map_black_48dp"
        app:fb_iconHeight="24dp"
        app:fb_iconMarginStart="12dp"
        app:fb_iconPosition="left"
        app:fb_iconWidth="24dp"
        app:fb_rippleColor="#7986CB"
        app:fb_shape="rectangle"
        app:fb_text="Open Dropbox"
        app:fb_textColor="#FFF"
        app:fb_textPaddingStart="12dp" />

</androidx.appcompat.widget.LinearLayoutCompat>
