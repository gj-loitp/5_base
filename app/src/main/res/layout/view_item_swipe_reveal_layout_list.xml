<?xml version="1.0" encoding="utf-8"?>
<com.loitpcore.views.layout.swipereveallayout.LSwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:srl_mode="same_level">

    <FrameLayout
        android:id="@+id/layoutDelete"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/w_70"
        android:background="#ffcc0000">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/w_70"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@android:color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layoutFront"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_70">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/w_5"
            android:background="@color/darkCyan"
            android:gravity="center"
            android:padding="@dimen/w_5"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_medium" />
    </FrameLayout>
</com.loitpcore.views.layout.swipereveallayout.LSwipeRevealLayout>
