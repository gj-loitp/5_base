<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/menu_dialog"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/bt_custom_progress_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/custom_progress_dialog" />

            <Button
                android:id="@+id/bt_ios_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ios_dialog" />

            <Button
                android:id="@+id/bt_original_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/original_dialog" />

            <Button
                android:id="@+id/bt_pretty_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pretty_dialog" />

            <Button
                android:id="@+id/btSlideImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/slide_images" />

            <Button
                android:id="@+id/bt_swipe_away_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/swipe_away_dialog" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

