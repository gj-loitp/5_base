<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Menu Toggle Button Group" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        android:text="SingleSelectToggleGroup with RadioButton"
        android:textColor="?attr/themeTextColor" />

    <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
        android:id="@+id/groupSingleRadioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        app:tbgChildSpacing="8dp">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/selector_bg_radio_button"
            android:button="@null"
            android:gravity="center"
            android:text="lorem"
            android:textColor="@color/selector_text_radio_button" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:background="@drawable/selector_bg_radio_button"
            android:button="@null"
            android:gravity="center"
            android:text="ipsum"
            android:textColor="@color/selector_text_radio_button" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:background="@drawable/selector_bg_radio_button"
            android:button="@null"
            android:gravity="center"
            android:text="dolor"
            android:textColor="@color/selector_text_radio_button" />

    </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        android:text="MultiSelectToggleGroup with CustomCompoundButton extending CompoundButton"
        android:textColor="?attr/themeTextColor" />

    <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
        android:id="@+id/groupMultiCustomCompoundButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        app:tbgChildSpacing="8dp">

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomCompoundButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="lorem"
            android:textColor="?attr/themeTextColor" />

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomCompoundButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:gravity="center"
            android:text="ipsum"
            android:textColor="?attr/themeTextColor" />

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomCompoundButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:gravity="center"
            android:text="dolor"
            android:textColor="?attr/themeTextColor" />

    </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        android:text="MultiSelectToggleGroup with CustomToggleButton implementing ToggleButton"
        android:textColor="?attr/themeTextColor" />

    <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
        android:id="@+id/groupMultiCustomToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_15"
        app:tbgChildSpacing="8dp">

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/selector_bg_radio_button"
            android:gravity="center"
            android:text="lorem"
            android:textColor="@color/selector_text_radio_button" />

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:background="@drawable/selector_bg_radio_button"
            android:gravity="center"
            android:text="ipsum"
            android:textColor="@color/selector_text_radio_button" />

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomToggleButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:background="@drawable/selector_bg_radio_button"
            android:gravity="center"
            android:text="dolor"
            android:textColor="@color/selector_text_radio_button" />

    </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_medium"
        android:text="SingleSelectToggleGroup with CustomCompoundToggleButton extending CompoundToggleButton"
        android:textColor="?attr/themeTextColor" />

    <com.nex3z.togglebuttongroup.SingleSelectToggleGroup
        android:id="@+id/groupSingleCustomCompoundToggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_medium"
        android:paddingEnd="@dimen/padding_medium"
        app:tbgChildSpacing="auto">

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomCompoundToggleButton
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:tbgBackImage="@drawable/card_a"
            app:tbgFrontImage="@drawable/card_back" />

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomCompoundToggleButton
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:tbgBackImage="@drawable/card_2"
            app:tbgFrontImage="@drawable/card_back" />

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomCompoundToggleButton
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:tbgBackImage="@drawable/card_3"
            app:tbgFrontImage="@drawable/card_back" />

        <vn.loitp.app.activity.customviews.switchtoggle.togglebuttongroup.button.CustomCompoundToggleButton
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:tbgBackImage="@drawable/card_4"
            app:tbgFrontImage="@drawable/card_back" />

    </com.nex3z.togglebuttongroup.SingleSelectToggleGroup>

</LinearLayout>
