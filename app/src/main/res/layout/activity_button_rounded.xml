<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <life.sabujak.roundedbutton.RoundedButton
                android:id="@+id/bt0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:gravity="center"
                android:padding="24dp"
                android:text="Button"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_20"
                app:buttonCornerRadius="20dp"
                app:buttonGradientEndColor="@color/colorPrimaryTrans"
                app:buttonGradientStartColor="@color/colorPrimary"
                app:buttonRippleAlpha="10"
                app:buttonRippleColor="@color/blue"
                tools:ignore="HardcodedText" />

            <life.sabujak.roundedbutton.RoundedButton
                android:id="@+id/bt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:padding="@dimen/padding_5"
                android:text="Button"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_20"
                app:buttonCornerRadius="20dp"
                app:buttonGradientEndColor="@color/granite"
                app:buttonGradientStartColor="@color/green"
                app:buttonRippleAlpha="80"
                app:buttonRippleColor="@color/red" />

            <life.sabujak.roundedbutton.RoundedButton
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:gravity="center"
                android:padding="24dp"
                android:text="Button"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_20"
                app:buttonCornerRadius="20dp"
                app:buttonGradientEndColor="@color/blue"
                app:buttonGradientStartColor="@color/red"
                app:buttonRippleAlpha="50"
                app:buttonRippleColor="@color/colorPrimaryTrans" />

            <life.sabujak.roundedbutton.RoundedButton
                android:id="@+id/bt3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Button"
                android:textColor="#ffffff"
                android:textSize="@dimen/txt_20"
                app:buttonCornerRadius="100dp"
                app:buttonGradientEndColor="@color/pineGreen"
                app:buttonGradientStartColor="@color/yellow"
                app:buttonRippleAlpha="100"
                app:buttonRippleColor="@color/colorPrimary" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/rounded_button" />
</RelativeLayout>
