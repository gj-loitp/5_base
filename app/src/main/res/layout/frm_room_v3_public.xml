<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lmk.videoplayer.VideoView
        android:id="@+id/roomFragment_videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_wait"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/img_onboarding3"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/view_group_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <vn.puresolutions.livestarv3.view.LChatView
            android:id="@+id/l_chat_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_150"
            android:layout_above="@+id/l_bottom_room" />

        <vn.puresolutions.livestarv3.view.LBottomRoom
            android:id="@+id/l_bottom_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

        <vn.puresolutions.livestarv3.view.LTopRoom
            android:id="@+id/l_top_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="@dimen/w_100"
        android:layout_height="@dimen/w_100"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/White"
        app:indicatorName="PacmanIndicator" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/black_30"
        android:gravity="center"
        android:padding="@dimen/padding_5"
        android:text="@string/app_name"
        android:textColor="@color/White"
        android:textSize="@dimen/txt_30"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>