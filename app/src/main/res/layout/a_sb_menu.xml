<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <com.loitp.views.ab.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.factor.bouncy.BouncyNestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lActionBar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btBoxedVerticalSeekbar"
                style="@style/ButtonMenu"
                android:text="@string/boxed_vertical_seekbar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btMaterialRangeBar"
                style="@style/ButtonMenu"
                android:text="MaterialRangeBar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRangeSeekBar"
                style="@style/ButtonMenu"
                android:text="RangeSeekbarActivity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRubberPicker"
                style="@style/ButtonMenu"
                android:text="RubberPicker" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSeekBar"
                style="@style/ButtonMenu"
                android:text="@string/seekbar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btVerticalSeekBar"
                style="@style/ButtonMenu"
                android:text="@string/vertical_seekbar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btVerticalSeekBar2"
                style="@style/ButtonMenu"
                android:text="VerticalSeekBar 2" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.factor.bouncy.BouncyNestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
