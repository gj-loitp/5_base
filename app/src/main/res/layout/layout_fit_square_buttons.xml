<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_padding_medium"
    android:paddingBottom="@dimen/margin_padding_medium">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.github.nikartm.button.FitButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:gravity="center"
            app:fb_backgroundColor="#673AB7"
            app:fb_cornerRadius="2dp"
            app:fb_icon="@drawable/ic_settings_black_48dp"
            app:fb_iconColor="#FFF"
            app:fb_iconPosition="top"
            app:fb_shape="square"
            app:fb_text="Start"
            app:fb_textColor="#FFF"
            app:fb_textPaddingTop="5dp" />

        <com.github.nikartm.button.FitButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:gravity="center"
            app:fb_backgroundColor="#FFF"
            app:fb_borderColor="#1976D2"
            app:fb_borderWidth="3dp"
            app:fb_cornerRadius="15dp"
            app:fb_icon="@drawable/ic_copyright_black_48dp"
            app:fb_iconColor="#1976D2"
            app:fb_iconHeight="40dp"
            app:fb_iconWidth="40dp"
            app:fb_rippleColor="#E3F2FD"
            app:fb_shape="square" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.github.nikartm.button.FitButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:gravity="center"
            app:fb_backgroundColor="#388E3C"
            app:fb_cornerRadius="8dp"
            app:fb_icon="@drawable/ic_thumb_up"
            app:fb_iconColor="#FFF"
            app:fb_iconHeight="40dp"
            app:fb_iconWidth="40dp"
            app:fb_shape="square" />

        <com.github.nikartm.button.FitButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="16dp"
            android:gravity="center"
            app:fb_backgroundColor="#FFF"
            app:fb_borderColor="#ef5350"
            app:fb_borderWidth="2dp"
            app:fb_cornerRadius="8dp"
            app:fb_icon="@drawable/ic_thumb_down_alt_black_48dp"
            app:fb_iconColor="#ef5350"
            app:fb_iconHeight="40dp"
            app:fb_iconWidth="40dp"
            app:fb_rippleColor="#ffcdd2"
            app:fb_shape="square" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>