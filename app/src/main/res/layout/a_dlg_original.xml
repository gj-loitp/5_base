<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <com.loitp.views.ab.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lActionBar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btShow1"
                style="@style/ButtonMenu"
                android:text="@string/dialog_1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btShow2"
                style="@style/ButtonMenu"
                android:text="@string/dialog_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btShow3"
                style="@style/ButtonMenu"
                android:text="@string/dialog_3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btShowList"
                style="@style/ButtonMenu"
                android:text="@string/dialog_list" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btProgressDialog"
                style="@style/ButtonMenu"
                android:text="@string/progress_dialog" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btInputDialog"
                style="@style/ButtonMenu"
                android:text="@string/input_dialog" />

            <Button
                android:id="@+id/bt1"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_medium"
                android:layout_marginTop="@dimen/margin_padding_medium"
                android:layout_marginEnd="@dimen/margin_padding_medium"
                android:text="Material3"
                android:textSize="@dimen/txt_medium" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
