<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_test_rx"
                style="@style/ButtonMenu"
                android:text="Test RX" />

            <Button
                android:id="@+id/bt_00"
                style="@style/ButtonMenu"
                android:text="AsyncTask and Rx" />

            <Button
                android:id="@+id/bt_0"
                style="@style/ButtonMenu"
                android:text="DisposableExampleActivity" />

            <Button
                android:id="@+id/bt_1"
                style="@style/ButtonMenu"
                android:text="FlowableExampleActivity" />

            <Button
                android:id="@+id/bt_2"
                style="@style/ButtonMenu"
                android:text="IntervalExampleActivity " />

            <Button
                android:id="@+id/bt_3"
                style="@style/ButtonMenu"
                android:text="SingleObserverExampleActivity " />

            <Button
                android:id="@+id/bt_4"
                style="@style/ButtonMenu"
                android:text="CompletableObserverExampleActivity " />

            <Button
                android:id="@+id/bt_5"
                style="@style/ButtonMenu"
                android:text="MapExampleActivity  " />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Menu RxJava2" />
</RelativeLayout>

