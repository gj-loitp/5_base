<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_test_rx"
                style="@style/ButtonMenu"
                android:text="Test RX" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_00"
                style="@style/ButtonMenu"
                android:text="AsyncTask and Rx" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt0"
                style="@style/ButtonMenu"
                android:text="DisposableExampleActivity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt1"
                style="@style/ButtonMenu"
                android:text="FlowableExampleActivity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt2"
                style="@style/ButtonMenu"
                android:text="IntervalExampleActivity " />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt3"
                style="@style/ButtonMenu"
                android:text="SingleObserverExampleActivity " />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt4"
                style="@style/ButtonMenu"
                android:text="CompletableObserverExampleActivity " />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt5"
                style="@style/ButtonMenu"
                android:text="MapExampleActivity  " />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Menu RxJava2" />
</RelativeLayout>

