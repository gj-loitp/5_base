<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <com.loitp.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lActionBar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btTestRx"
                style="@style/ButtonMenu"
                android:text="@string/test_rx" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAsyncTaskAndRx"
                style="@style/ButtonMenu"
                android:text="@string/asynctask_and_rx" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDisposableExampleActivity"
                style="@style/ButtonMenu"
                android:text="@string/disposableexampleactivity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFlowableExampleActivity"
                style="@style/ButtonMenu"
                android:text="@string/flowableexampleactivity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btIntervalExampleActivity"
                style="@style/ButtonMenu"
                android:text="@string/intervalexampleactivity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSingleObserverExampleActivity"
                style="@style/ButtonMenu"
                android:text="@string/singleobserverexampleactivity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt4"
                style="@style/ButtonMenu"
                android:text="@string/completableobserverexampleactivity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btMapExampleActivity"
                style="@style/ButtonMenu"
                android:text="@string/mapexampleactivity" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
