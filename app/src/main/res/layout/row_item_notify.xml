<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cvResultSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_110"
        app:cardCornerRadius="@dimen/corner_5"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvNotifyScreen_Icon"
                android:layout_width="0dp"
                android:layout_height="@dimen/h_50"
                android:layout_weight="1"
                fresco:roundAsCircle="true" />

            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvNotifyScreen_Title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center|left" />

                <TextView
                    android:id="@+id/tvNotifyScreen_Content"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center|left" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvNotifyScreen_Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="12/07" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>