<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/whiteSmoke"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_medium"
    android:paddingBottom="@dimen/padding_medium">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btFileAsyncTask"
        style="@style/ButtonMenu"
        android:text="Load from Url File - Aysnctask" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btFileCoroutine"
        style="@style/ButtonMenu"
        android:text="Load from Url File - Coroutine" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btStreamAsyncTask"
        style="@style/ButtonMenu"
        android:text="Load from Url Stream - Aysnctask" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btStreamCoroutine"
        style="@style/ButtonMenu"
        android:text="Load from Url Stream - Coroutine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_10"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/margin_10"
            android:max="100"
            android:visibility="gone"
            tools:progress="50"
            tools:visibility="visible" />
    </RelativeLayout>
</LinearLayout>
