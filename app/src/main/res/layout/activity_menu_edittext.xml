<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/menu_edittext"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/bt_animated_expandable_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/animatedexpandableedittextactivity" />

            <Button
                android:id="@+id/bt_auto_resize_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/autoresizeedittext" />

            <Button
                android:id="@+id/btAutoSuggestEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/autosuggestedittext" />

            <Button
                android:id="@+id/bt_material_text_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/materialtextfield" />

            <Button
                android:id="@+id/bt_biu_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/biuedittext" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

