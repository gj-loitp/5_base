<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteSmoke">

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAvloadingIndicatorView"
                style="@style/ButtonMenu"
                android:text="@string/avloadingindicatorview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCircularProgressBar"
                style="@style/ButtonMenu"
                android:text="@string/circular_progress_bar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCircularProgressIndicator"
                style="@style/ButtonMenu"
                android:text="@string/circularprogressindicator" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btWindow"
                style="@style/ButtonMenu"
                android:text="Window progress" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/menu_progress_loading_view" />
</RelativeLayout>

