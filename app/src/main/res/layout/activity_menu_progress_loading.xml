<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/menu_progress_loading_view"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/btAvloadingIndicatorView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/avloadingindicatorview" />

            <Button
                android:id="@+id/btCircularProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/circular_progress_bar" />

            <Button
                android:id="@+id/btCircularProgressIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/circularprogressindicator" />

            <Button
                android:id="@+id/btWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Window progress" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

