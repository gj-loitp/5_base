<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_boxed_vertical_seekbar"
                style="@style/ButtonMenu"
                android:text="Boxed Vertical SeekBar" />

            <Button
                android:id="@+id/bt_circularseekbar_seekbar"
                style="@style/ButtonMenu"
                android:text="circularseekbar seekbar" />

            <Button
                android:id="@+id/bt_seekbar"
                style="@style/ButtonMenu"
                android:text="seekbar" />

            <Button
                android:id="@+id/bt_vertical_seekbar"
                style="@style/ButtonMenu"
                android:text="vertical seekbar" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Seekbar Menu" />
</RelativeLayout>

