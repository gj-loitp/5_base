<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_policy"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_api"
                style="@style/ButtonMenu"
                android:text="@string/api" />

            <Button
                android:id="@+id/bt_ads"
                style="@style/ButtonMenu"
                android:text="@string/ads" />

            <Button
                android:id="@+id/bt_animation"
                style="@style/ButtonMenu"
                android:text="@string/animation" />

            <Button
                android:id="@+id/bt_custom_view"
                style="@style/ButtonMenu"
                android:text="@string/custom_views" />

            <Button
                android:id="@+id/bt_database"
                style="@style/ButtonMenu"
                android:text="@string/database" />

            <Button
                android:id="@+id/bt_picker"
                style="@style/ButtonMenu"
                android:text="@string/picker" />

            <Button
                android:id="@+id/btSecurity"
                style="@style/ButtonMenu"
                android:text="Security" />

            <Button
                android:id="@+id/btService"
                style="@style/ButtonMenu"
                android:text="Service" />

            <Button
                android:id="@+id/bt_demo"
                style="@style/ButtonMenu"
                android:text="@string/demo_app" />

            <Button
                android:id="@+id/bt_function"
                style="@style/ButtonMenu"
                android:text="@string/function" />

            <Button
                android:id="@+id/btNetwork"
                style="@style/ButtonMenu"
                android:text="@string/network" />

            <Button
                android:id="@+id/bt_pattern"
                style="@style/ButtonMenu"
                android:text="@string/pattern" />

            <Button
                android:id="@+id/bt_tutorial"
                style="@style/ButtonMenu"
                android:text="@string/tutorial" />

            <Button
                android:id="@+id/bt_rate_app"
                style="@style/ButtonMenu"
                android:text="@string/rate_app" />

            <Button
                android:id="@+id/bt_more_app"
                style="@style/ButtonMenu"
                android:text="@string/more_app" />

            <Button
                android:id="@+id/bt_chat"
                style="@style/ButtonMenu"
                android:text="@string/chat_with_dev" />

            <Button
                android:id="@+id/bt_fb_fanpage"
                style="@style/ButtonMenu"
                android:text="@string/fb_fanpage" />

            <Button
                android:id="@+id/bt_ad_helper"
                style="@style/ButtonMenu"
                android:text="Vì sao bạn thấy quảng cáo?" />

            <Button
                android:id="@+id/bt_frm_more"
                style="@style/ButtonMenu"
                android:text="@string/th_m" />

            <Button
                android:id="@+id/bt_donation"
                style="@style/ButtonMenu"
                android:text="@string/donation" />

            <Button
                android:id="@+id/bt_github"
                style="@style/ButtonMenu"
                android:text="@string/github" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/main_menu" />

    <TextView
        android:id="@+id/tv_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/padding_5"
        android:text="@string/policy"
        android:textColor="@drawable/text_black_white"
        android:textSize="@dimen/txt_10" />
</RelativeLayout>

