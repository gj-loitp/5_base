<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ScrollVertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:clipToPadding="false"
    android:padding="@dimen/padding_10"
    android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.views.textview.extra.LExtraTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txt_12"
                    app:ext_txt_drawable="@drawable/l_ic_settings_black_48dp"
                    app:ext_txt_drawableHeight="16dp"
                    app:ext_txt_drawablePosition="top"
                    app:ext_txt_drawableTint="@android:color/holo_green_dark"
                    app:ext_txt_drawableWidth="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tint \n+ position(top) \n+ fix size" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.views.textview.extra.LExtraTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txt_12"
                    app:ext_txt_drawable="@drawable/l_ic_settings_black_48dp"
                    app:ext_txt_drawableHeight="16dp"
                    app:ext_txt_drawablePosition="left"
                    app:ext_txt_drawableTint="@android:color/holo_orange_dark"
                    app:ext_txt_drawableWidth="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tint \n+ position(left) \n+ fix size" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.views.textview.extra.LExtraTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:padding="@dimen/padding_5"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txt_12"
                    app:ext_txt_cornerBorderColor="@android:color/holo_purple"
                    app:ext_txt_cornerBorderSize="1dp"
                    app:ext_txt_cornerRadius="16dp"
                    app:ext_txt_drawable="@drawable/l_ic_settings_black_48dp"
                    app:ext_txt_drawableHeight="16dp"
                    app:ext_txt_drawablePosition="right"
                    app:ext_txt_drawableTint="@android:color/holo_purple"
                    app:ext_txt_drawableWidth="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tint \n+ position(right) \n+ corner(border only) \n+ fix size" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.views.textview.extra.LExtraTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:ext_txt_cornerBackgroundColor="@android:color/holo_purple"
                    app:ext_txt_cornerRadius="16dp"
                    app:ext_txt_drawable="@drawable/l_ic_settings_black_48dp"
                    app:ext_txt_drawableHeight="16dp"
                    app:ext_txt_drawablePosition="right"
                    app:ext_txt_drawableTint="@android:color/white"
                    app:ext_txt_drawableWidth="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tint \n+ position(right) \n+ corner(bg only) \n+ fix size" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.views.textview.extra.LExtraTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:ext_txt_drawable="@drawable/l_ic_settings_black_48dp"
                    app:ext_txt_drawableHeight="16dp"
                    app:ext_txt_drawablePosition="bottom"
                    app:ext_txt_drawableTint="@android:color/holo_red_dark"
                    app:ext_txt_drawableWidth="16dp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tint \n+ position(bottom) \n+ fix size" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.views.textview.extra.LExtraTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:ext_txt_drawable="@drawable/l_ic_settings_black_48dp"
                    app:ext_txt_drawablePosition="top"
                    app:ext_txt_drawableTint="@android:color/holo_green_dark" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tint \n+ position(top) \n+ auto resizing" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.views.textview.extra.LToggleLExtraTextView
                    android:id="@+id/toggle_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="@string/loitp"
                    android:textSize="12sp"
                    app:ext_txt_activeDrawable="@drawable/l_ic_settings_black_48dp"
                    app:ext_txt_activeTint="@android:color/holo_red_light"
                    app:ext_txt_cornerBorderColor="@android:color/black"
                    app:ext_txt_cornerBorderSize="1dp"
                    app:ext_txt_cornerRadius="16dp"
                    app:ext_txt_drawable="@drawable/l_ic_settings_black_48dp"
                    app:ext_txt_drawableHeight="16dp"
                    app:ext_txt_drawableWidth="16dp"
                    app:ext_txt_idleTint="@android:color/black"
                    app:ext_txt_waitingTint="@android:color/darker_gray" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/waitingBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:text="wait" />

                    <Button
                        android:id="@+id/activeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:text="act" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <com.views.textview.extra.LExtraTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="2dp"
            android:text="fit icon"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            app:ext_txt_cornerBorderColor="@color/colorAccent"
            app:ext_txt_cornerBorderSize="1dp"
            app:ext_txt_cornerRadius="16dp"
            app:ext_txt_drawable="@drawable/ic_add_a_photo_24dp"
            app:ext_txt_drawableFit="true"
            app:ext_txt_drawableHeight="16dp"
            app:ext_txt_drawablePosition="right"
            app:ext_txt_drawableTint="@color/colorAccent"
            app:ext_txt_drawableWidth="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.views.textview.extra.LToggleLExtraTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="2dp"
                android:text="fit icon"
                android:textSize="12sp"
                app:ext_txt_cornerBorderColor="@android:color/black"
                app:ext_txt_cornerBorderSize="1dp"
                app:ext_txt_cornerRadius="16dp"
                app:ext_txt_drawable="@drawable/ic_close"
                app:ext_txt_drawableFit="true"
                app:ext_txt_drawableHeight="16dp"
                app:ext_txt_drawableWidth="16dp"
                app:ext_txt_idleTint="@android:color/holo_blue_light" />

            <com.views.textview.extra.LToggleLExtraTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="2dp"
                android:text="fit icon"
                android:textSize="12sp"
                app:ext_txt_cornerBorderColor="@android:color/black"
                app:ext_txt_cornerBorderSize="1dp"
                app:ext_txt_cornerRadius="16dp"
                app:ext_txt_drawable="@drawable/l_ic_fullscreen_expand"
                app:ext_txt_drawableFit="true"
                app:ext_txt_drawableHeight="16dp"
                app:ext_txt_drawableWidth="16dp"
                app:ext_txt_idleTint="@android:color/holo_orange_light" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>