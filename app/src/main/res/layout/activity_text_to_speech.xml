<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resolution_textView"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_i_love_you"
                style="@style/ButtonMenu"
                android:text="I love you" />

            <Button
                android:id="@+id/bt_i_you_love_me"
                style="@style/ButtonMenu"
                android:text="You love me" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Input an english sentence"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/bt_speak"
                    style="@style/ButtonMenu"
                    android:text="Speak"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/resolution_textView"
        style="@style/TextMenu"
        android:text="Text To Speech" />
</RelativeLayout>