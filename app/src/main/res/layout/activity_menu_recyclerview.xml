<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true"
        android:paddingTop="@dimen/padding_15"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_bookview"
                style="@style/ButtonMenu"
                android:text="Bookview" />

            <Button
                android:id="@+id/bt_diff_util"
                style="@style/ButtonMenu"
                android:text="Diff Util" />

            <Button
                android:id="@+id/bt_gallery_layout_manager"
                style="@style/ButtonMenu"
                android:text="GalleryLayoutManager Horizontal" />

            <Button
                android:id="@+id/bt_gallery_layout_manager_vertical"
                style="@style/ButtonMenu"
                android:text="GalleryLayoutManager Vertical" />

            <Button
                android:id="@+id/bt_normal_recyclerview"
                style="@style/ButtonMenu"
                android:text="Normal RecyclerView With Animation" />

            <Button
                android:id="@+id/bt_normal_recyclerview_with_singleton_data"
                style="@style/ButtonMenu"
                android:text="Normal RecyclerView With Singleton Data" />

            <Button
                android:id="@+id/bt_normal_recyclerview_with_spansize"
                style="@style/ButtonMenu"
                android:text="Normal RecyclerView With Spansize" />

            <Button
                android:id="@+id/bt_parallax_recyclerview"
                style="@style/ButtonMenu"
                android:text="ParallaxRecyclerView" />

            <Button
                android:id="@+id/bt_overflying_recyclerview"
                style="@style/ButtonMenu"
                android:text="Overflying RecyclerView" />

            <Button
                android:id="@+id/bt_parallax_recyclerview_yayandroid"
                style="@style/ButtonMenu"
                android:text="ParallaxRecyclerView Yayandroid" />

            <Button
                android:id="@+id/bt_recyclerview_banner"
                style="@style/ButtonMenu"
                android:text="RecyclerBanner" />

            <Button
                android:id="@+id/btRecyclerTabLayout"
                style="@style/ButtonMenu"
                android:text="Recycler Tab Layout" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="RecyclerView Menu" />
</RelativeLayout>

