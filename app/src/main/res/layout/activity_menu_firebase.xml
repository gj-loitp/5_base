<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_admob"
                style="@style/ButtonMenu"
                android:text="Admob" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_auth"
                style="@style/ButtonMenu"
                android:text="Auth" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_config"
                style="@style/ButtonMenu"
                android:text="Config" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_database"
                style="@style/ButtonMenu"
                android:text="Database" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_database_simple"
                style="@style/ButtonMenu"
                android:text="Database simple" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_fcm"
                style="@style/ButtonMenu"
                android:text="FCM" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_invite"
                style="@style/ButtonMenu"
                android:text="Invite" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btGetFCMToken"
                style="@style/ButtonMenu"
                android:text="Get FCM Token" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btResetInstanceId"
                style="@style/ButtonMenu"
                android:text="Reset Instance Id (FCM Token)" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Menu Firebase" />
</RelativeLayout>

