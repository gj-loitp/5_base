<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRotate"
                style="@style/ButtonMenu"
                android:layout_marginTop="@dimen/w_10"
                android:text="@string/rotate_screen" />

            <com.loitp.views.autoSize.imageButtonWithSize.ImageButtonWithSize
                android:id="@+id/bt0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/l_heart" />

            <com.loitp.views.autoSize.imageButtonWithSize.ImageButtonWithSize
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/w_50"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/l_gift" />

            <com.loitp.views.autoSize.imageButtonWithSize.ImageButtonWithSize
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/w_50"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@color/red" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/the_size_of_button_will_be_changed_when_device_screen_is_rotated" />
</RelativeLayout>
