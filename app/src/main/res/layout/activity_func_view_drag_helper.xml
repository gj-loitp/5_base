<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColorMedium">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <androidx.core.widget.NestedScrollView
            style="@style/ScrollVertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:text="@string/large_text"
                android:textColor="?attr/themeTextColor"
                android:textSize="@dimen/txt_medium" />
        </androidx.core.widget.NestedScrollView>

        <com.views.layout.youtubelayout.YoutubeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@id/view_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_250"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/loitp"
                android:tag="text" />

            <androidx.core.widget.NestedScrollView
                android:id="@id/view_desc"
                style="@style/ScrollVertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red50">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="@string/large_text"
                    android:textColor="?attr/themeTextColor"
                    android:textSize="@dimen/txt_medium" />
            </androidx.core.widget.NestedScrollView>

        </com.views.layout.youtubelayout.YoutubeLayout>
    </FrameLayout>
</RelativeLayout>
