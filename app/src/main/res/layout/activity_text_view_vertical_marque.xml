<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:example="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.loitpcore.views.textview.verticalmarquee.LVerticalMarqueeTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            example:marqueeSpeed="50"
            example:text="The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog."
            example:textColor="?attr/themeTextColor"
            example:textSize="@dimen/txt_medium"
            example:textStyle="bold" />

        <com.loitpcore.views.textview.verticalmarquee.LVerticalMarqueeTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_padding_medium"
            android:layout_weight="1"
            example:marqueeSpeed="25"
            example:text="The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog. The quick brown fox jumps over the lazy dog."
            example:textColor="@color/deepPink"
            example:textSize="@dimen/txt_large"
            example:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
