<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_200"
        android:src="@drawable/img_onboarding1"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@color/transparent"
        fresco:placeholderImageScaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_200"
        android:background="@drawable/bkg_shadow_transparent_black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:orientation="horizontal">

        <vn.puresolutions.livestarv3.view.LTextViewHorizontal
            android:id="@+id/l_text_view_watching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <vn.puresolutions.livestarv3.view.LTextViewHorizontal
            android:id="@+id/l_text_view_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/w_155"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_is_private"
            android:layout_width="@dimen/w_30"
            android:layout_height="@dimen/w_30"
            android:layout_marginLeft="@dimen/margin_5"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/lock" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:maxLines="1"
            android:textColor="@color/White"
            android:textSize="@dimen/txt_30" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_is_onair"
        android:layout_width="@dimen/w_30"
        android:layout_height="@dimen/w_30"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_10"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        android:src="@drawable/onair" />

    <View
        android:id="@+id/view_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50"
        android:layout_below="@+id/iv"
        android:visibility="gone" />
</RelativeLayout>