<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <com.loitp.views.ab.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lActionBar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/w_65">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/lbutton_change_drawable_of_pressed_state_programmatically_with_one_line_code_lbutton_setpresseddrawable"
                android:textColor="?attr/themeTextColor"
                android:textSize="@dimen/txt_medium" />

            <com.loitp.views.bt.l.LButton
                android:id="@+id/bt0"
                android:layout_width="@dimen/w_100"
                android:layout_height="@dimen/w_100"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/l_heart" />

            <com.loitp.views.bt.l.LButton
                android:id="@+id/bt1"
                android:layout_width="@dimen/w_100"
                android:layout_height="@dimen/w_100"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/logo" />

            <com.loitp.views.bt.l.LButton
                android:id="@+id/bt2"
                android:layout_width="@dimen/w_80"
                android:layout_height="@dimen/w_80"
                android:background="@color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/l_heart_icon" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
