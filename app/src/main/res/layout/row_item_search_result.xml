<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_5">

    <View
        android:id="@+id/view_space_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvResultSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/h_110"
        android:layout_below="@+id/view_space_top"
        app:cardCornerRadius="@dimen/corner_5"
        app:cardElevation="@dimen/w_1"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdvSearchScreen_Avatar"
                android:layout_width="@dimen/w_90"
                android:layout_height="@dimen/w_90"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_5"
                fresco:backgroundImage="@color/WhiteSmoke"
                fresco:placeholderImage="@color/transparent"
                fresco:placeholderImageScaleType="fitCenter"
                fresco:roundedCornerRadius="@dimen/round_5" />

            <ImageView
                android:id="@+id/ivSearchScreen_OnAir"
                android:layout_width="@dimen/w_25"
                android:layout_height="@dimen/w_25"
                android:layout_marginLeft="@dimen/margin_2"
                android:layout_marginTop="@dimen/margin_2"
                android:contentDescription="@string/app_name"
                android:src="@drawable/livestream_button"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toRightOf="@+id/sdvSearchScreen_Avatar"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvSearchScreen_IdolName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tvSearchScreen_Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSearchScreen_IdolName"
                    android:textColor="@color/Gray"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="italic" />

                <vn.puresolutions.livestarv3.view.LTextViewImageRight
                    android:id="@+id/ltvSearchScreen_Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSearchScreen_Description"
                    android:layout_marginTop="@dimen/margin_10" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/ivSearchScreen_Private"
                android:layout_width="@dimen/w_30"
                android:layout_height="@dimen/h_30"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:contentDescription="@string/app_name"
                android:src="@drawable/lock_button" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/view_space_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50"
        android:layout_below="@+id/cvResultSearch"
        android:visibility="gone" />
</RelativeLayout>