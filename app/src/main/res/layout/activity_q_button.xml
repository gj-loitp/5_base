<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    android:orientation="vertical">

    <com.loitpcore.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_padding_medium"
            android:paddingTop="@dimen/margin_padding_medium"
            android:paddingEnd="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium">

            <com.manojbhadane.QButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingStart="@dimen/w_50"
                android:paddingEnd="@dimen/w_50"
                android:text="Hello World!"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/yellow"
                app:qb_radius="10"
                app:qb_strokeColor="@color/orange"
                app:qb_strokeWidth="1" />

            <com.manojbhadane.QButton
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/deepPink"
                app:qb_radius="100"
                app:qb_strokeColor="@color/colorPrimaryDark"
                app:qb_strokeWidth="0" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="true"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/darkRed"
                app:qb_radius="100"
                app:qb_strokeColor="@color/colorPrimary"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/darkCyan"
                app:qb_radius="100"
                app:qb_strokeColor="@color/colorPrimary"
                app:qb_strokeDashGap="5"
                app:qb_strokeDashWidth="90"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Hello World!"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/lightCyan"
                app:qb_radius="100"
                app:qb_strokeColor="@color/darkGreen"
                app:qb_strokeDashGap="25"
                app:qb_strokeDashWidth="90"
                app:qb_strokeWidth="15" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/black"
                app:qb_radius="15"
                app:qb_strokeColor="@color/darkRed"
                app:qb_strokeWidth="0" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/greenYellow"
                app:qb_radius="15"
                app:qb_strokeColor="@color/darkBlue"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/blueViolet"
                app:qb_radius="0"
                app:qb_strokeColor="@color/greenYellow"
                app:qb_strokeWidth="15" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/brown"
                app:qb_radius="15"
                app:qb_strokeColor="@color/deepPink"
                app:qb_strokeDashGap="5"
                app:qb_strokeDashWidth="90"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/colorAccent"
                app:qb_radius="35" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/colorAccent"
                app:qb_radius="45" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>
