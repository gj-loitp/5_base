<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TextMenu"
        android:text="QButton" />

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10">

            <com.manojbhadane.QButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingStart="@dimen/padding_55"
                android:paddingEnd="@dimen/padding_55"
                android:text="Hello World!"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/Yellow"
                app:qb_radius="10"
                app:qb_strokeColor="@color/Orange"
                app:qb_strokeWidth="1" />

            <com.manojbhadane.QButton
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/DeepPink"
                app:qb_radius="100"
                app:qb_strokeColor="@color/colorPrimaryDark"
                app:qb_strokeWidth="0" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="true"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/DarkRed"
                app:qb_radius="100"
                app:qb_strokeColor="@color/colorPrimary"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/DarkCyan"
                app:qb_radius="100"
                app:qb_strokeColor="@color/colorPrimary"
                app:qb_strokeDashGap="5"
                app:qb_strokeDashWidth="90"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:enabled="false"
                android:text="Hello World!"
                android:textColor="@android:color/black"
                app:qb_backgroundColor="@color/LightCyan"
                app:qb_radius="100"
                app:qb_strokeColor="@color/DarkGreen"
                app:qb_strokeDashGap="25"
                app:qb_strokeDashWidth="90"
                app:qb_strokeWidth="15" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/Black"
                app:qb_radius="15"
                app:qb_strokeColor="@color/DarkRed"
                app:qb_strokeWidth="0" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/GreenYellow"
                app:qb_radius="15"
                app:qb_strokeColor="@color/DarkBlue"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/BlueViolet"
                app:qb_radius="0"
                app:qb_strokeColor="@color/GreenYellow"
                app:qb_strokeWidth="15" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/Brown"
                app:qb_radius="15"
                app:qb_strokeColor="@color/DeepPink"
                app:qb_strokeDashGap="5"
                app:qb_strokeDashWidth="90"
                app:qb_strokeWidth="5" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/colorAccent"
                app:qb_radius="35" />

            <com.manojbhadane.QButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Hello World!"
                android:textColor="@android:color/white"
                app:qb_backgroundColor="@color/colorAccent"
                app:qb_radius="45" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
