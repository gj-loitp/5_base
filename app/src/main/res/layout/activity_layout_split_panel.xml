<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColorMedium">

    <com.views.layout.splitpanellayout.SplitPaneLayout xmlns:spl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/splitPaneLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        spl:splitterBackground="@drawable/bkg_et"
        spl:splitterDraggingBackground="#88000000"
        spl:splitterOrientation="vertical"
        spl:splitterPanelSizeMin="48dip"
        spl:splitterPosition="69%"
        spl:splitterSize="4dip">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFirst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hello_world"
            android:textColor="?attr/themeTextColor"
            android:textSize="@dimen/txt_medium" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/hello_world"
            android:textColor="@color/red"
            android:textSize="@dimen/txt_medium" />

    </com.views.layout.splitpanellayout.SplitPaneLayout>
</RelativeLayout>
