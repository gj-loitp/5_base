<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Menu Button"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/bt_button_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Loading" />

            <Button
                android:id="@+id/bt_circular_image_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Circular Image Click" />

            <Button
                android:id="@+id/bt_f_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FButton" />

            <Button
                android:id="@+id/bt_goodview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GoodView" />

            <Button
                android:id="@+id/bt_shine_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shine Button" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

