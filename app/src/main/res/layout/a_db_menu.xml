<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <com.loitp.views.ab.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <com.factor.bouncy.BouncyNestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lActionBar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSqliteAsset"
                style="@style/ButtonMenu"
                android:text="@string/read_sqlite_asset" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRealm"
                style="@style/ButtonMenu"
                android:text="@string/realm" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRoom"
                style="@style/ButtonMenu"
                android:text="@string/room" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRoom2"
                style="@style/ButtonMenu"
                android:text="@string/room_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSharedPrefs"
                style="@style/ButtonMenu"
                android:text="@string/shared_prefs" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSharedPrefsEncryption"
                style="@style/ButtonMenu"
                android:text="@string/shared_prefs_encryption" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSqlite"
                style="@style/ButtonMenu"
                android:text="@string/sqlite" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSqliteEncryption"
                style="@style/ButtonMenu"
                android:text="@string/sqlite_encryption" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSqliteMultiTable"
                style="@style/ButtonMenu"
                android:text="@string/sqlite_multi_table" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSqliteMultiTableAdvance"
                style="@style/ButtonMenu"
                android:text="@string/sqlite_multi_table_advance" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.factor.bouncy.BouncyNestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
