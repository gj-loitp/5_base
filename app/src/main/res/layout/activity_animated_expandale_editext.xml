<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/l_bkg_black_colorprimary">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_padding_medium"
            android:paddingTop="@dimen/w_65"
            android:paddingEnd="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_form_group"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <com.loitpcore.views.editText.animatedExpandable.LAnimatedExpandableEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w_50"
                    android:background="@android:color/transparent"
                    android:hint="@string/cpf"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/w_20"
                    android:paddingRight="@dimen/w_20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <com.loitpcore.views.editText.animatedExpandable.LAnimatedExpandableEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w_50"
                    android:background="@android:color/transparent"
                    android:hint="@string/e_mail"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/w_20"
                    android:paddingRight="@dimen/w_20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_small" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <com.loitpcore.views.editText.animatedExpandable.LAnimatedExpandableEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w_50"
                    android:background="@android:color/transparent"
                    android:hint="@string/data_de_nascimento"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/w_20"
                    android:paddingRight="@dimen/w_20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_small" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_form_group"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <com.loitpcore.views.editText.animatedExpandable.LAnimatedExpandableEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w_50"
                    android:background="@android:color/transparent"
                    android:hint="@string/about_you"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/w_20"
                    android:paddingRight="@dimen/w_20"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_small" />

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <com.loitpcore.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
