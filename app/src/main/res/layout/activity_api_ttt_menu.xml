<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/w_65"
            android:paddingBottom="@dimen/margin_padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btComicList"
                style="@style/ButtonMenu"
                android:text="Lấy danh sách truyện" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btChapList"
                style="@style/ButtonMenu"
                android:text="Danh sách chương ONEPIECE" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btPageList"
                style="@style/ButtonMenu"
                android:text="Danh sách trang ONEPIECE - Chap 69" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFavList"
                style="@style/ButtonMenu"
                android:text="Danh sách truyện yêu thích" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.views.actionbar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
