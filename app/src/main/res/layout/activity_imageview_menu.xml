<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btBigImageView"
                style="@style/ButtonMenu"
                android:text="@string/big_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btBigImageViewWithScrollView"
                style="@style/ButtonMenu"
                android:text="@string/big_imageview_with_scrollview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btBlurImageView"
                style="@style/ButtonMenu"
                android:text="@string/blur_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCirleImageView"
                style="@style/ButtonMenu"
                android:text="@string/circle_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btContinuousScrollableImageView"
                style="@style/ButtonMenu"
                android:text="@string/continuous_scrollable_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFidgetSpinner"
                style="@style/ButtonMenu"
                android:text="@string/fidgetspinner_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btKenburnView"
                style="@style/ButtonMenu"
                android:text="Kenburn view" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btPanoramaImageView"
                style="@style/ButtonMenu"
                android:text="@string/panorama_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btPinchToZoom"
                style="@style/ButtonMenu"
                android:text="Pinch to zoom" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btPinchToZoomWithViewPager"
                style="@style/ButtonMenu"
                android:text="Pinch to zoom with ViewPager" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btScrollParallaxImageView"
                style="@style/ButtonMenu"
                android:text="@string/scroll_parallax_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btTouchImageView"
                style="@style/ButtonMenu"
                android:text="@string/touch_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btStretchyImageView"
                style="@style/ButtonMenu"
                android:text="@string/stretchy_imageview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btZoomImageView"
                style="@style/ButtonMenu"
                android:text="@string/zoomimageview" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/menu_imageview" />
</RelativeLayout>

