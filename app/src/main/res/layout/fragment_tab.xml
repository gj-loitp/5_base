<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        android:id="@+id/tabFragment_tabView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/black_65"
        android:clipToPadding="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        app:stl_dividerThickness="0dp"
        app:stl_indicatorThickness="38dp"
        app:stl_indicatorGravity="center"
        app:stl_indicatorColor="#FFBE00"
        app:stl_titleOffset="auto_center"
        app:stl_defaultTabBackground="@color/white"
        app:stl_overlineThickness="0dp"
        app:stl_indicatorCornerRadius="18dp"
        app:stl_indicatorInterpolation="smart"
        app:stl_underlineThickness="0dp" />

    <RelativeLayout
        android:id="@+id/tabFragment_viewPagerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabFragment_tabView">

        <android.support.v4.view.ViewPager
            android:id="@+id/tabFragment_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/tabFragment_pgbLoading"
            style="@style/progress_bar"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>