<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    tools:ignore="HardcodedText">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/w_65"
            android:paddingBottom="@dimen/margin_padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btBookView"
                style="@style/ButtonMenu"
                android:text="Bookview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btConcatAdapter"
                style="@style/ButtonMenu"
                android:text="Merge Adapter" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDiffUtil"
                style="@style/ButtonMenu"
                android:text="Diff Util" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDragDropSwipeRecyclerviewListVertical"
                style="@style/ButtonMenu"
                android:text="DragDropSwipeRecyclerview List Vertical" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDragDropSwipeRecyclerviewListHorizontal"
                style="@style/ButtonMenu"
                android:text="DragDropSwipeRecyclerview List Horizontal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDragDropSwipeRecyclerviewGrid"
                style="@style/ButtonMenu"
                android:text="DragDropSwipeRecyclerview Grid Horizontal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFastScroll"
                style="@style/ButtonMenu"
                android:text="Fast scroll" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFastScrollSeekBar"
                style="@style/ButtonMenu"
                android:text="Fast scroll seek bar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFitGridView"
                style="@style/ButtonMenu"
                android:text="Fit GridView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFooter"
                style="@style/ButtonMenu"
                android:text="Footer" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFooter2"
                style="@style/ButtonMenu"
                android:text="Footer 2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btGalleryLayoutManager"
                style="@style/ButtonMenu"
                android:text="GalleryLayoutManager Horizontal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btGalleryLayoutManagerVertical"
                style="@style/ButtonMenu"
                android:text="GalleryLayoutManager Vertical" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btNetView"
                style="@style/ButtonMenu"
                android:text="Net view" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btNormalRecyclerView"
                style="@style/ButtonMenu"
                android:text="Normal RecyclerView With Animation" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btNormalRecyclerViewWithSingletonData"
                style="@style/ButtonMenu"
                android:text="Normal RecyclerView With Singleton Data" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btNormalRecyclerViewWithSpanSize"
                style="@style/ButtonMenu"
                android:text="Normal RecyclerView With Spansize" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btParallaxRecyclerView"
                style="@style/ButtonMenu"
                android:text="ParallaxRecyclerView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRecyclerTabLayout"
                style="@style/ButtonMenu"
                android:text="Recycler Tab Layout" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.loitpcore.views.actionbar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
