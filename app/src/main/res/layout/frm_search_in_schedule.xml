<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_group_top"
        android:scrollbars="none" />

    <RelativeLayout
        android:id="@+id/view_group_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10">

        <TextView
            android:id="@+id/tv_number_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/Gray"
            android:textSize="@dimen/txt_12" />

        <LinearLayout
            android:id="@+id/view_group_choose_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_choose_menu_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_toLeftOf="@+id/bt_choose_menu_time"
                android:text="@string/app_name"
                android:textColor="@color/Gray"
                android:textSize="@dimen/txt_12" />

            <ImageView
                android:id="@+id/bt_choose_menu_time"
                android:layout_width="@dimen/w_20"
                android:layout_height="@dimen/w_20"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/Gray" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>