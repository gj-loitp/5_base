<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_show_1"
                style="@style/ButtonMenu"
                android:text="@string/dialog_1" />

            <Button
                android:id="@+id/bt_show_2"
                style="@style/ButtonMenu"
                android:text="@string/dialog_2" />

            <Button
                android:id="@+id/bt_show_3"
                style="@style/ButtonMenu"
                android:text="@string/dialog_3" />

            <Button
                android:id="@+id/bt_show_list"
                style="@style/ButtonMenu"
                android:text="@string/dialog_list" />

            <Button
                android:id="@+id/bt_progress_dialog"
                style="@style/ButtonMenu"
                android:text="@string/progress_dialog" />

            <Button
                android:id="@+id/bt_custom_dialog"
                style="@style/ButtonMenu"
                android:text="@string/custom_dialog" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/swipe_away_dialog" />
</RelativeLayout>

