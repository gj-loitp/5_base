<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_register_edittext"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/padding_5">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/w_25"
        android:layout_height="@dimen/w_25"
        android:layout_marginRight="@dimen/margin_5"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/padding_3"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/lepInputPass"
            style="@style/edit_text_common"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_show_pass"
            android:background="@color/transparent"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_40" />

        <ImageView
            android:id="@+id/iv_show_pass"
            android:layout_width="@dimen/w_25"
            android:layout_height="@dimen/w_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/padding_3"
            android:scaleType="centerInside"
            android:src="@drawable/eye"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>