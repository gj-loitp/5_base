<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_0"
                style="@style/ButtonMenu"
                android:text="@string/falling_confetti_from_top" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_1"
                style="@style/ButtonMenu"
                android:text="@string/falling_confetti_from_point" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_2"
                style="@style/ButtonMenu"
                android:text="@string/explosion" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_3"
                style="@style/ButtonMenu"
                android:text="@string/shimmering_confetti" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_4"
                style="@style/ButtonMenu"
                android:text="@string/falling_ice_flakes_with_touch" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_5"
                style="@style/ButtonMenu"
                android:text="@string/falling_ice_flakes_with_listener" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/menu_confetti" />
</RelativeLayout>

