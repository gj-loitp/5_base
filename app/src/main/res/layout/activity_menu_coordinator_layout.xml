<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_0"
                style="@style/ButtonMenu"
                android:text="With ImageView" />

            <Button
                android:id="@+id/bt_1"
                style="@style/ButtonMenu"
                android:text="Standard App bar scrolling with only Toolbar" />

            <Button
                android:id="@+id/bt_2"
                style="@style/ButtonMenu"
                android:text="App bar scrolling with tabs" />

            <Button
                android:id="@+id/bt_3"
                style="@style/ButtonMenu"
                android:text="App bar scrolling with Flexible space" />

            <Button
                android:id="@+id/bt_4"
                style="@style/ButtonMenu"
                android:text="App bar scrolling with overlapping content in Flexible space" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Coordiantor Layout Menu" />
</RelativeLayout>

