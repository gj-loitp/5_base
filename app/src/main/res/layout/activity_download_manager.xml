<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ScrollVertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightBlue"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCurrentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/txt_medium" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btStartDownload"
                    style="@style/ButtonMenu"
                    android:text="start download"
                    android:textSize="@dimen/txt_medium" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btCancelDownload"
                    style="@style/ButtonMenu"
                    android:text="cancel download"
                    android:textSize="@dimen/txt_medium" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btPauseDownload"
                    style="@style/ButtonMenu"
                    android:text="pause download"
                    android:textSize="@dimen/txt_medium" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btResumeDownload"
                    style="@style/ButtonMenu"
                    android:text="resume download"
                    android:textSize="@dimen/txt_medium" />

                <ProgressBar
                    android:id="@+id/sbDownloadProgress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminateOnly="false"
                    android:padding="@dimen/padding_medium" />

                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/txt_medium"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/txt_medium"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/tvTotalSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/txt_medium"
                    tools:text="@string/app_name" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_1"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGreen"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="Download file zip from google drive, then unzip"
                    android:textSize="@dimen/txt_medium" />

                <TextView
                    android:id="@+id/tvCurrentStatusZip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/txt_medium" />

                <ProgressBar
                    android:id="@+id/sbDownloadProgressZip"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminateOnly="false"
                    android:padding="@dimen/padding_medium" />

                <TextView
                    android:id="@+id/tvPercentZip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/txt_medium"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/tvSizeZip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/txt_medium"
                    tools:text="@string/app_name" />

                <TextView
                    android:id="@+id/tvTotalSizeZip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:textSize="@dimen/txt_medium"
                    tools:text="@string/app_name" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btStartDownloadZipGoogle"
                    style="@style/ButtonMenu"
                    android:text="Start download zip google"
                    android:textSize="@dimen/txt_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_1"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGrey"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_medium"
                    android:text="Test LStore Util"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btTestRandomColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:text="randomColor"
                    android:textSize="@dimen/txt_medium" />

                <TextView
                    android:id="@+id/btTestRandomColorLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:text="randomColorLight"
                    android:textSize="@dimen/txt_medium" />

                <TextView
                    android:id="@+id/btTestWriteToFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:text="writeToFile"
                    android:textSize="@dimen/txt_medium" />

                <TextView
                    android:id="@+id/btReadTxtFromFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:text="readTxtFromFolder"
                    android:textSize="@dimen/txt_medium" />

                <TextView
                    android:id="@+id/btReadTxtFromRawFolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:text="readTxtFromRawFolder"
                    android:textSize="@dimen/txt_medium" />

                <TextView
                    android:id="@+id/btReadTxtFromAsset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:text="readTxtFromAsset"
                    android:textSize="@dimen/txt_medium" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProgress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black65"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/white"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>
    </FrameLayout>

</androidx.core.widget.NestedScrollView>
