<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="vn.puresolutions.livestarv3.activity.login.fragment.FrmForgotSuccess">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/loginscreen_forgot_title"
            android:textSize="20sp" />
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></View>
    </LinearLayout>
    <ImageView
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />
    <TextView
        android:text="@string/loginscreen_forgot_success"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <Button
        android:id="@+id/btnFrmForgotSuccess_BackLogin"
        android:textColor="@color/black"
        android:background="@drawable/background_forgot_done_btnback"
        android:layout_gravity="center_horizontal"
        android:text="Đăng nhập"
        android:layout_weight="1.3"
        android:layout_width="130dp"
        android:layout_height="0dp" />
    <View
        android:layout_weight="10"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
</LinearLayout>
