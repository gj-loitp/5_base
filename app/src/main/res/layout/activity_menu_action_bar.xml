<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_collapsingtoolbarlayout"
                style="@style/ButtonMenu"
                android:text="@string/collapsing_toolbar_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_collapsingtoolbarwithtablayout"
                style="@style/ButtonMenu"
                android:text="@string/collapsing_toolbar_with_tab_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_l_actionbar"
                style="@style/ButtonMenu"
                android:text="@string/lactionbar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_navigation_view"
                style="@style/ButtonMenu"
                android:text="@string/navigation_view" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_navigation_view_with_text"
                style="@style/ButtonMenu"
                android:text="@string/navigation_view_with_text" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/menu_action_bar" />
</RelativeLayout>
