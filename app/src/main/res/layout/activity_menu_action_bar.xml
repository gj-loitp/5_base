<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/menu_action_bar"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/bt_collapsingtoolbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/collapsing_toolbar_layout" />

            <Button
                android:id="@+id/bt_collapsingtoolbarwithtablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/collapsing_toolbar_with_tablayout" />

            <Button
                android:id="@+id/bt_l_actionbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lactionbar" />

            <Button
                android:id="@+id/bt_navigation_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/navigation_view" />

            <Button
                android:id="@+id/bt_navigation_view_with_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/navigation_view_with_text" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

