<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke">

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAspectRatioLayout"
                style="@style/ButtonMenu"
                android:text="Aspect Ratio Layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btAutoLinearLayout"
                style="@style/ButtonMenu"
                android:text="@string/autolinearlayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCircularView"
                style="@style/ButtonMenu"
                android:text="@string/circularview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btConstraintLayout"
                style="@style/ButtonMenu"
                android:text="@string/constraint_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCoordinatorLayout"
                style="@style/ButtonMenu"
                android:text="@string/coordinatorlayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDraggablePanel"
                style="@style/ButtonMenu"
                android:text="@string/draggablepanel" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDraggableView"
                style="@style/ButtonMenu"
                android:text="@string/draggableview" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDraggablePanelFree"
                style="@style/ButtonMenu"
                android:text="@string/draggablepanel_free" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btDragueur"
                style="@style/ButtonMenu"
                android:text="@string/dragueur" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btElasticDragDismissLayout"
                style="@style/ButtonMenu"
                android:text="@string/elasticdragdismisslayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btExpansionPanel"
                style="@style/ButtonMenu"
                android:text="Expansion Panel" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFloatDragLayout"
                style="@style/ButtonMenu"
                android:text="@string/floatdraglayout_activity" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btFlowLayout"
                style="@style/ButtonMenu"
                android:text="Flow layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btHeartLayout"
                style="@style/ButtonMenu"
                android:text="@string/heart_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btMotionLayout"
                style="@style/ButtonMenu"
                android:text="@string/motion_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRelativePopupWindow"
                style="@style/ButtonMenu"
                android:text="@string/relative_popup_window" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRippleLayout"
                style="@style/ButtonMenu"
                android:text="@string/ripple_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRotateLayout"
                style="@style/ButtonMenu"
                android:text="@string/rotate_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btRoundableLayout"
                style="@style/ButtonMenu"
                android:text="Roundable layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btScrollView2d"
                style="@style/ButtonMenu"
                android:text="@string/scroll_view_2d" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btScrollView2dAdvance"
                style="@style/ButtonMenu"
                android:text="@string/scroll_view_2d_advance" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btShadowLayout"
                style="@style/ButtonMenu"
                android:text="@string/shadow_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btShapeOfView"
                style="@style/ButtonMenu"
                android:text="Shape Of View" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSplitPanelLayout"
                style="@style/ButtonMenu"
                android:text="Split Panel Layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSquareLayout"
                style="@style/ButtonMenu"
                android:text="@string/square_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSwipebackLayout"
                style="@style/ButtonMenu"
                android:text="@string/swipebacklayout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSwipeRefreshLayout"
                style="@style/ButtonMenu"
                android:text="@string/swipe_refresh_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSwipeRevealLayout"
                style="@style/ButtonMenu"
                android:text="@string/swipe_reveal_layout" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btZoomLayout"
                style="@style/ButtonMenu"
                android:text="@string/zoom_layout" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="@string/layout_menu" />
</RelativeLayout>

