<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    android:orientation="vertical">

    <com.loitp.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="?attr/themeTextColor" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/margin_padding_medium"
            android:contentDescription="@string/app_name"
            android:src="@drawable/iv" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTrash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_padding_medium"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_delete_forever_black_48dp"
            android:tint="?attr/themeTextColor" />
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
