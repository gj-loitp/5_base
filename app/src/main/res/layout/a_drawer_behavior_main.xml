<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <com.loitp.views.ab.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lActionBar">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/margin_padding_medium"
            android:paddingBottom="@dimen/margin_padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonDefault"
                style="@style/ButtonMenu"
                android:text="@string/_default" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdvance1"
                style="@style/ButtonMenu"
                android:text="@string/advance_1" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdvance2"
                style="@style/ButtonMenu"
                android:text="@string/advance_2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdvance3"
                style="@style/ButtonMenu"
                android:text="@string/advance_3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdvance4"
                style="@style/ButtonMenu"
                android:text="@string/advance_4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdvance5"
                style="@style/ButtonMenu"
                android:text="@string/advance_5_card" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdvance6"
                style="@style/ButtonMenu"
                android:text="@string/advance_6_rtl" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdvance3d1"
                style="@style/ButtonMenu"
                android:text="@string/advance_3d" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
