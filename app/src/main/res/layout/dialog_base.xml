<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialogBase_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/view_margin_medium"
        android:gravity="center_horizontal"
        android:background="@drawable/background_dialog"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/button_dialog"
                android:id="@+id/ls_dialogBase_btnNegative"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textColor="@android:color/white" />

            <View
                android:id="@+id/dialogBase_vwDivider"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <Button
                style="@style/button_dialog"
                android:id="@+id/ls_dialogBase_btnPositive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/sign_in"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ls_dialogBase_imgClose"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_close_dialog" />

</RelativeLayout>