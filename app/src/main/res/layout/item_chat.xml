<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_chat"
    android:orientation="horizontal"
    android:padding="3dp"
    android:gravity="center_vertical|center_horizontal"
    android:layout_marginBottom="@dimen/view_margin_micro">

    <RelativeLayout
        android:gravity="center_vertical"
        android:id="@+id/chatItem_lnlAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/chatItem_imgAvatar"
            android:layout_width="@dimen/lounge_avatar_size"
            android:layout_height="@dimen/lounge_avatar_size"
            android:layout_margin="5dp"
            fresco:actualImageScaleType="fitCenter"
            fresco:placeholderImage="@android:color/holo_red_dark"
            fresco:roundAsCircle="true" />

        <ImageView
            android:id="@+id/chatItem_imgVip"
            android:contentDescription="@null"
            android:layout_width="@dimen/lounge_avatar_size"
            android:layout_height="38dp"
            android:layout_alignBottom="@+id/chatItem_imgAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-8dp"
            android:src="@drawable/ic_vip1" />

    </RelativeLayout>

    <ImageView
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:id="@+id/Chatitem_imgVipType"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <TextView
        android:id="@+id/chatItem_tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingBottom="@dimen/view_padding_small"
        android:paddingLeft="@dimen/view_padding_small"
        android:paddingRight="@dimen/view_padding_medium"
        android:paddingTop="@dimen/view_padding_small"
        android:text="@string/app_name"
        android:textAppearance="@style/proxima"
        android:textColor="@color/white"
        android:textSize="@dimen/chat_text_size" />

</LinearLayout>