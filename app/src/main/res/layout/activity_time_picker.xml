<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColorMedium"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TimePicker
        android:id="@+id/timePickerClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="clock" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimePickerClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/themeTextColor"
        android:textSize="@dimen/txt_medium"
        tools:text="@string/app_name" />

    <TimePicker
        android:id="@+id/timePickerSpiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTimePickeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/themeTextColor"
        android:textSize="@dimen/txt_medium"
        tools:text="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btDialog"
            style="@style/ButtonMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Dialog" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btDialogRange"
            style="@style/ButtonMenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Dialog Range" />
    </LinearLayout>

</LinearLayout>
