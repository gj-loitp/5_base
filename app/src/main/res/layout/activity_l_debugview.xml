<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor">

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btStart"
                style="@style/ButtonMenu"
                android:text="Start" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_stop"
                style="@style/ButtonMenu"
                android:enabled="false"
                android:text="Stop" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_send_d"
                style="@style/ButtonMenu"
                android:enabled="false"
                android:text="Send log d" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_send_i"
                style="@style/ButtonMenu"
                android:enabled="false"
                android:text="Send log i" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_send_e"
                style="@style/ButtonMenu"
                android:enabled="false"
                android:text="Send log e" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_send_object_d"
                style="@style/ButtonMenu"
                android:enabled="false"
                android:text="Send log d - object" />
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="LDebugView" />
</RelativeLayout>

