<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/original_dialog"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/bt_show_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/simple_dialog_no_customization" />

            <Button
                android:id="@+id/bt_show_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_icon" />

            <Button
                android:id="@+id/bt_show_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_unlimited_customized_buttons" />

            <Button
                android:id="@+id/bt_show_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fully_customize" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

