<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColor"
    android:orientation="vertical">

    <com.loitp.views.actionBar.LActionBar
        android:id="@+id/lActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/red"
        app:tabGravity="start"
        app:tabIndicatorColor="@color/green"
        app:tabMode="auto"
        app:tabRippleColor="@color/yellow"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextColor="@color/darkCyan" />

    <com.loitp.views.vp.auto.LAutoViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:avp_autoScroll="true"
        app:avp_duration="1000"
        app:avp_indeterminate="true" />

</androidx.appcompat.widget.LinearLayoutCompat>
