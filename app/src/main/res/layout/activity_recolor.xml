<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@id/root_view"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#004D40"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_5">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="0dp"
                android:clickable="true"
                android:src="@mipmap/ic_launcher"
                android:tint="#fff" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:gravity="center"
                android:text="a simple TextView"
                android:textSize="30sp" />

            <LinearLayout
                android:id="@+id/linReColorBackground"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:background="#1d1d1d"
                android:clickable="true"
                android:foreground="?selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ReColor Background"
                    android:textColor="@color/White"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/theCardView"
                android:layout_width="290dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:foreground="?selectableItemBackgroundBorderless"
                app:cardBackgroundColor="#1E88E5"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ReColor CardView"
                    android:textColor="@color/White" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linRecolorStatusBar"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#1d1d1d"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ReColor status bar"
                        android:textColor="@color/White" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linRecolorNavigationBar"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#1d1d1d"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ReColor Navigation bar"
                        android:textColor="@color/White" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linRecolorBoth"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#1d1d1d"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ReColor Both"
                        android:textColor="@color/White" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linPulseStatusBar"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#1d1d1d"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Pulse Status bar"
                        android:textColor="@color/White" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linPulseNavigationBar"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#1d1d1d"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Pulse Navigation bar"
                        android:textColor="@color/White" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linPulseBoth"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:background="#1d1d1d"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Pulse Both"
                        android:textColor="@color/White" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

