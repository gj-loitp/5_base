<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeBackgroundColorMedium">

    <ScrollView
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvMenu"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btBoxedVerticalSeekbar"
                style="@style/ButtonMenu"
                android:text="Boxed Vertical SeekBar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btCircularSeekbar"
                style="@style/ButtonMenu"
                android:text="Circularseekbar seekbar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btSeekBar"
                style="@style/ButtonMenu"
                android:text="Seekbar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btVerticalSeekBar"
                style="@style/ButtonMenu"
                android:text="Vertical seekbar" />

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMenu"
        style="@style/TextMenu"
        android:text="Seekbar Menu" />
</RelativeLayout>
