            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
            <stroke android:width="0.5dp" android:color="@color/lightGrey" />
            <corners android:radius="@dimen/round_larger" />
            <!--            <padding android:bottom="@dimen/padding_5" android:left="@dimen/padding_10" android:right="@dimen/padding_10" android:top="@dimen/padding_5" />-->
