<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/w_1" android:color="@color/primaryColor" />
            <solid android:color="@color/primaryColor" />
            <padding android:bottom="@dimen/w_1" android:left="@dimen/w_1" android:right="@dimen/w_1" android:top="@dimen/w_1" />
            <corners android:radius="@dimen/round_45" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/facebook" />
            <solid android:color="@color/facebook" />
            <padding android:bottom="@dimen/w_1" android:left="@dimen/w_1" android:right="@dimen/w_1" android:top="@dimen/w_1" />

            <corners android:radius="@dimen/round_45" />
        </shape>
    </item>

</selector>