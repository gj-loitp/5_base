<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/w_1" android:color="@color/Black" />
            <solid android:color="@color/white" />
            <padding android:left="@dimen/padding_1" android:right="@dimen/padding_1" android:top="@dimen/padding_1" />
            <corners android:radius="@dimen/round_45" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke android:width="@dimen/w_1" android:color="@color/LightGrey" />
            <solid android:color="@color/grey_400" />
            <padding android:left="@dimen/padding_1" android:right="@dimen/padding_1" android:top="@dimen/padding_1" />
            <corners android:radius="@dimen/round_45" />
        </shape>
    </item>

</selector>