<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/primaryColor" />

            <stroke android:width="@dimen/w_1" android:color="@color/primaryColor" />

            <corners android:radius="@dimen/round_45" />

            <padding android:bottom="@dimen/w_10" android:left="@dimen/w_20" android:right="@dimen/w_20" android:top="@dimen/w_10" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/transparent" android:startColor="@color/transparent" />

            <stroke android:width="@dimen/w_1" android:color="@color/WhiteTrans" />

            <corners android:radius="@dimen/round_45" />

            <padding android:bottom="@dimen/w_10" android:left="@dimen/w_20" android:right="@dimen/w_20" android:top="@dimen/w_10" />
        </shape>
    </item>

</selector>