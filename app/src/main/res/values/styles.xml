<resources>

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TextMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_large</item>
        <item name="android:paddingBottom">@dimen/margin_padding_large</item>
        <item name="android:textColor">?attr/themeTextColor</item>
        <item name="android:paddingTop">@dimen/margin_padding_large</item>
        <item name="android:background">?attr/themeBackgroundColorMedium</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">?attr/themeBackgroundColorMedium</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_padding_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/themeTextColor</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_medium</item>
        <item name="android:paddingStart">@dimen/margin_padding_medium</item>
        <item name="android:paddingEnd">@dimen/margin_padding_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_small</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:drawableStart">@drawable/ic_baseline_arrow_back_ios_24</item>
        <item name="android:drawableTint">?attr/themeTextColor</item>

    </style>

    <declare-styleable name="CustomCompoundButtonTheme">
        <attr name="customCompoundButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomCompoundToggleButton">
        <attr name="tbgFrontImage" format="reference" />
        <attr name="tbgBackImage" format="reference" />
    </declare-styleable>

    <style name="CircleImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="EditActivityImageView" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SupportDropdownTextView">
        <item name="arrow_drawable">@drawable/ic_arrow</item>
        <item name="bg_drawable_expanded">@drawable/bg_second_dropdown_text_view_expanded</item>
        <item name="bg_drawable_regular">@drawable/bg_first_dropdown_text_view_regular</item>
        <item name="content_text_color">#ffffff</item>
        <item name="title_text_color">#ff00ff</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerShape" parent="">
        <item name="cornerSizeTopLeft">34dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <style name="AppToolbarTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <integer-array name="star_colors">
        <item>@color/red</item>
        <item>@color/green</item>
        <item>@color/blue</item>
        <item>@color/deepPink</item>
        <item>@color/white</item>
        <item>@color/cyan</item>
    </integer-array>

    <integer-array name="meteorites_colors">
        <item>@color/light_Cyan</item>
        <item>@color/pineGreen</item>
        <item>@color/pink</item>
    </integer-array>

    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_corner">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="cut_corner">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="specific_rounded_corner">
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="specific_cut_corner">
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="specific_mix_corner">
        <item name="cornerSize">50dp</item>
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>
</resources>
