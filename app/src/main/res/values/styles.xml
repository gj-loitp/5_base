<resources>

    <style name="SplashTheme" parent="DarkTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/startup</item>
    </style>

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TextMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:textColor">?attr/themeTextColor</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:background">?attr/themeBackgroundColorMedium</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">?attr/themeBackgroundColorMedium</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/themeTextColor</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:foreground">?selectableItemBackground</item>

    </style>

    <declare-styleable name="CustomCompoundButtonTheme">
        <attr name="customCompoundButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomCompoundToggleButton">
        <attr name="tbgFrontImage" format="reference" />
        <attr name="tbgBackImage" format="reference" />
    </declare-styleable>

</resources>
