<resources>

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TextMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:textColor">?attr/themeTextColor</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:background">?attr/themeBackgroundColorMedium</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">?attr/themeBackgroundColorMedium</item>
        <item name="android:textSize">@dimen/txt_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/themeTextColor</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:foreground">?selectableItemBackground</item>

    </style>

    <declare-styleable name="CustomCompoundButtonTheme">
        <attr name="customCompoundButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomCompoundToggleButton">
        <attr name="tbgFrontImage" format="reference" />
        <attr name="tbgBackImage" format="reference" />
    </declare-styleable>

    <!--    <style name="TextStyle" parent="@android:style/Widget.TextView">-->
    <!--        <item name="android:textColor">@android:color/white</item>-->
    <!--        <item name="android:gravity">center</item>-->
    <!--        <item name="android:padding">10dp</item>-->
    <!--        <item name="android:textStyle">bold</item>-->
    <!--        <item name="android:textSize">18sp</item>-->
    <!--    </style>-->

    <style name="CircleImageStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--    <style name="CollapsedExpandedTitleText" parent="AppTheme">-->
    <!--        <item name="android:textColor">@android:color/transparent</item>-->
    <!--    </style>-->

    <style name="Theme.FastScrollSample" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- If you set this in your theme, all FastScroller(Thumb)Views will use this style by default -->
        <item name="indicatorFastScrollerStyle">@style/Widget.FastScrollSample.FastScroller</item>
        <item name="indicatorFastScrollerThumbStyle">
            @style/Widget.FastScrollSample.FastScrollerThumb
        </item>
    </style>

    <!-- See the parent styles for more attributes -->

    <style name="Widget.FastScrollSample.FastScroller" parent="Widget.IndicatorFastScroll.FastScroller">
        <item name="iconColor">@color/red</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Widget.FastScrollSample.FastScroller.Floating">
        <item name="iconColor">?colorAccent</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:background">@drawable/fastscroller_floating_background</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Widget.FastScrollSample.FastScrollerThumb" parent="Widget.IndicatorFastScroll.FastScrollerThumb" />

    <style name="Widget.FastScrollSample.FastScrollerThumb.Colorful">
        <item name="thumbColor">?colorAccent</item>
    </style>

</resources>
