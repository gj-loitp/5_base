<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="MyLockScreenStyle">
        <item name="android:background">@drawable/bkg_black_colorprimary</item>
    </style>

    <style name="MyLockScreenButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:foreground">@drawable/key_foreground</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/txt_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
</resources>
