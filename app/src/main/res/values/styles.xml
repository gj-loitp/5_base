<resources>

    <style name="SplashTheme" parent="AppThemeAndroidO">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/startup</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="TextMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/l_bkg_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txt_22</item>
        <item name="android:paddingBottom">@dimen/padding_30</item>
        <item name="android:paddingTop">@dimen/padding_30</item>
    </style>

    <style name="ButtonMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textSize">@dimen/txt_18</item>
        <item name="android:layout_marginStart">@dimen/margin_15</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginEnd">@dimen/margin_15</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginBottom">@dimen/margin_5</item>
        <item name="android:background">@drawable/bt_tag</item>
    </style>
</resources>
