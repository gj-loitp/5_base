<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_view">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_view_white" parent="text_view">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_view_money" parent="text_view">
        <item name="android:textSize">@dimen/text_view_money_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="text_view_tab_gift" parent="text_view_white">
        <item name="android:paddingLeft">@dimen/view_padding_small</item>
        <item name="android:paddingRight">@dimen/view_padding_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginLeft">@dimen/view_margin_medium</item>
        <item name="android:background">@drawable/background_gift_tab</item>
    </style>

    <style name="text_view_sign_in" parent="proxima">
        <item name="android:textSize">@dimen/sign_in_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_view_dialog">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAppearance">@style/proxima</item>
    </style>

    <style name="text_view_dialog_dark">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAppearance">@style/proxima</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_view_menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16sp</item>
        <item name="fontPath">fonts/proxima-nova-regular.otf</item>
    </style>

    <!--<style name="text_view_calendar_header" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>-->
    <style name="text_view_calendar_header" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/txt_10</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--<style name="text_view_calendar_date" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@drawable/selector_calendar_date</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>-->
    <style name="text_view_calendar_date" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">@drawable/selector_calendar_date</item>
        <item name="android:textSize">@dimen/txt_10</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
