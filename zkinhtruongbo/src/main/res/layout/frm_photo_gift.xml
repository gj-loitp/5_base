<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="@dimen/padding_5">

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="top|center"
                android:text="@string/open_gift"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/w_150"
                android:layout_height="@dimen/w_150"
                android:layout_marginBottom="@dimen/margin_10"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <vn.loitp.views.progressloadingview.avloadingindicatorview.lib.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_55"
        app:indicatorColor="@color/colorPrimary"
        app:indicatorName="PacmanIndicator" />

    <TextView
        android:id="@+id/tv_gift_not_found"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center"
        android:text="@string/gift_not_found"
        android:textColor="@color/grey"
        android:textSize="@dimen/txt_18"
        android:visibility="gone" />
</RelativeLayout>

