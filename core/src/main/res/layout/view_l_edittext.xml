<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@color/transparent"
                android:paddingStart="@dimen/padding_30"
                android:paddingEnd="@dimen/padding_30"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/txt_16"
                tools:text="@string/large_dummy_text" />

            <ImageView
                android:id="@+id/ivLeft"
                android:layout_width="@dimen/w_30"
                android:layout_height="@dimen/w_30"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/padding_5"
                android:src="@drawable/ic_settings_black_48dp" />

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="@dimen/w_30"
                android:layout_height="@dimen/w_30"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/padding_5"
                android:src="@drawable/icon_close"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcv"
        android:textSize="@dimen/txt_14"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="@string/app_name"
        tools:visibility="visible" />
</RelativeLayout>