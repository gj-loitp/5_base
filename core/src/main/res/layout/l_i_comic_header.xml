<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="?android:attr/actionBarSize"
    tools:ignore="UnusedAttribute">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_250"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/logo" />

    <!--    <com.github.mmin18.widget.RealtimeBlurView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/w_250"-->
    <!--        app:realtimeBlurRadius="@dimen/round_medium"-->
    <!--        app:realtimeOverlayColor="?attr/themeBackgroundColor50" />-->

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/roundRect"
        android:layout_width="@dimen/w_150"
        android:layout_height="@dimen/w_150"
        android:layout_gravity="center"
        android:elevation="@dimen/w_3"
        app:shape_roundRect_borderColor="?attr/themeTextColor"
        app:shape_roundRect_borderWidth="@dimen/w_1"
        app:shape_roundRect_bottomLeftRadius="0dp"
        app:shape_roundRect_bottomRightRadius="@dimen/round_largest"
        app:shape_roundRect_topLeftRadius="@dimen/round_largest"
        app:shape_roundRect_topRightRadius="@dimen/round_largest">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            tools:src="@drawable/logo" />

    </io.github.florent37.shapeofview.shapes.RoundRectView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="@dimen/margin_padding_medium"
        android:textColor="?attr/themeTextColor"
        android:textSize="@dimen/txt_medium"
        android:textStyle="bold"
        tools:text="@string/app_name_comic" />

</FrameLayout>
