<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    tools:ignore="UnusedAttribute">

    <View
        android:id="@+id/viewSpaceTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_25" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/l_bkg_shadow_white_black_dark" />

        <TextView
            android:id="@+id/tvLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvUpdate"
            android:layout_marginStart="@dimen/margin_3"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_3"
            android:layout_marginBottom="@dimen/margin_3"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_medium" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_3"
            android:layout_marginEnd="@dimen/margin_3"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/txt_22"
            tools:ignore="RelativeOverlap" />

        <!--<ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/w_30"
            android:layout_height="@dimen/w_30"
            android:layout_centerInParent="true" />-->
    </RelativeLayout>

    <View
        android:id="@+id/viewSpaceBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_60" />
</LinearLayout>
