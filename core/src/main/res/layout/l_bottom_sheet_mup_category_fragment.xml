<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/themeBackgroundColor"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_tiny"
        android:background="@color/lightGrey" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_medium"
        android:singleLine="true"
        android:text="@string/category_vn"
        android:textColor="?attr/themeTextColor"
        android:textSize="@dimen/txt_largest"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/w_65"
        android:layout_marginBottom="@dimen/w_65"
        android:indeterminateTint="?attr/themeTextColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/margin_padding_small"
        android:paddingEnd="@dimen/margin_padding_small"
        android:visibility="gone"
        tools:itemCount="10"
        tools:listitem="@layout/view_row_comic_category" />
</LinearLayout>
