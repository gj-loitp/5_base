<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_5">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Test add truyện"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_20" />

            <Button
                android:id="@+id/bt_add_vuongphongloi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm truyện Vương Phong Lôi I" />

            <Button
                android:id="@+id/bt_add_layers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm truyện Layers" />

            <Button
                android:id="@+id/bt_add_blackhaze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm truyện Black Haze" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/Black"
                android:textSize="@dimen/txt_10" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>