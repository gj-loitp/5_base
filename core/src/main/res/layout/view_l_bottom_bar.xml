<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_10"
            android:background="@drawable/bkg_shadow_white_black" />

        <vn.loitp.views.realtimeblurview.RealtimeBlurView
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:realtimeBlurRadius="@dimen/round_80"
            app:realtimeOverlayColor="@color/WhiteTrans99" />

        <!--<View
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_50"
            android:background="@color/White" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/w_50"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_icon_0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_50"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/padding_10"
                android:scaleType="centerInside"
                android:src="@drawable/ic_thumb_up_black_48dp" />
            <!--<vn.loitpanhdv.yup.view.shinebuttonlib.ShineButton
                android:id="@+id/bt_icon_0"
                android:layout_width="@dimen/w_30"
                android:layout_height="@dimen/w_30"
                app:allow_random_color="false"
                app:enable_flashing="true"
                app:siShape="@drawable/home" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/w_50"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_icon_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_50"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/padding_10"
                android:scaleType="centerInside"
                android:src="@drawable/ic_thumb_up_black_48dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/w_50"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_icon_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_50"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/padding_10"
                android:scaleType="centerInside"
                android:src="@drawable/ic_thumb_up_black_48dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/w_50"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_icon_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_50"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/padding_10"
                android:scaleType="centerInside"
                android:src="@drawable/ic_thumb_up_black_48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/w_50"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bt_icon_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_50"
                android:clickable="false"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/padding_10"
                android:scaleType="centerInside"
                android:src="@drawable/ic_thumb_up_black_48dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>