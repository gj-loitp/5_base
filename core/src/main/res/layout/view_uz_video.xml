<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/Black">

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:auto_show="false"
        app:controller_layout_id="@layout/exo_playback_control_view_uz_video" />

    <vn.loitp.views.progressloadingview.avloadingindicatorview.lib.avi.AVLoadingIndicatorView
        android:id="@+id/avl"
        style="@style/AVLoadingIndicatorView"
        android:layout_width="@dimen/w_25"
        android:layout_height="@dimen/w_25"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/White"
        app:indicatorName="BallZigZagDeflectIndicator" />

</RelativeLayout>