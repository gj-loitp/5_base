<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/w_250">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_update"
        android:layout_marginLeft="@dimen/margin_3"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_32"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_3"
        android:layout_marginLeft="@dimen/margin_3"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_14" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_3"
        android:layout_marginTop="@dimen/margin_3"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_22" />

    <vn.loitp.views.progressloadingview.avloadingindicatorview.lib.avi.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="@dimen/w_30"
        android:layout_height="@dimen/w_30"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/White"
        app:indicatorName="LineScalePulseOutRapidIndicator" />
</RelativeLayout>