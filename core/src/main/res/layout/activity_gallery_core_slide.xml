<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/iv_bkg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_bkg_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop" />

    <vn.loitp.views.realtimeblurview.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="@dimen/round_15"
        app:realtimeOverlayColor="@color/black_35" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:padding="@dimen/padding_5"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_22"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/rl_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/bt_report"
            android:layout_width="@dimen/w_40"
            android:layout_height="@dimen/w_40"
            android:layout_marginRight="@dimen/margin_55"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ladybird" />

        <ImageView
            android:id="@+id/bt_download"
            android:layout_width="@dimen/w_80"
            android:layout_height="@dimen/w_80"
            android:contentDescription="@string/app_name"
            android:src="@drawable/download" />

        <ImageView
            android:id="@+id/bt_share"
            android:layout_width="@dimen/w_40"
            android:layout_height="@dimen/w_40"
            android:layout_marginLeft="@dimen/margin_55"
            android:contentDescription="@string/app_name"
            android:src="@drawable/slideshare" />
    </LinearLayout>
</RelativeLayout>
