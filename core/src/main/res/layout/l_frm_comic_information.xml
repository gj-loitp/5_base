<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="?attr/themeBackgroundColor">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        style="@style/ScrollVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btAdHelper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/w_40"
                    android:layout_height="@dimen/w_40"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_help_black_48dp"
                    app:tint="?attr/themeTextColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/why_u_see_ad_en"
                    android:textColor="?attr/themeTextColor"
                    android:textSize="@dimen/txt_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_1"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/btRateApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/w_40"
                    android:layout_height="@dimen/w_40"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_rate_review_black_48dp"
                    app:tint="?attr/themeTextColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/rate_app_en"
                    android:textColor="?attr/themeTextColor"
                    android:textSize="@dimen/txt_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_1"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/btMoreApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/w_40"
                    android:layout_height="@dimen/w_40"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_card_giftcard_black_48dp"
                    app:tint="?attr/themeTextColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/more_app_en"
                    android:textColor="?attr/themeTextColor"
                    android:textSize="@dimen/txt_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_1"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/btShareApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/w_40"
                    android:layout_height="@dimen/w_40"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_share_black_48dp"
                    app:tint="?attr/themeTextColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/share_app_en"
                    android:textColor="?attr/themeTextColor"
                    android:textSize="@dimen/txt_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_1"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/btLikeFbFanpage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/w_40"
                    android:layout_height="@dimen/w_40"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_favorite_black_48dp"
                    app:tint="?attr/themeTextColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/like_facebook_fanpage"
                    android:textColor="?attr/themeTextColor"
                    android:textSize="@dimen/txt_medium" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/w_1"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/btSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/w_40"
                    android:layout_height="@dimen/w_40"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_live_help_black_48dp"
                    app:tint="?attr/themeTextColor" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/support_24_7_en"
                    android:textColor="?attr/themeTextColor"
                    android:textSize="@dimen/txt_medium" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>
