<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SplashTheme" parent="DarkTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/startup</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorEdgeEffect">@color/colorEdgeEffect
        </item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="LabelTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/txt_medium</item>
    </style>

    <style name="CrossImageView">
        <item name="android:paddingLeft">@dimen/padding_icon_cross</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_close_black_48dp</item>
    </style>

    <style name="Label">
        <item name="android:padding">@dimen/margin_padding_medium</item>
        <item name="android:layout_margin">@dimen/margin_between_labels</item>
        <item name="android:background">@color/whiteSmoke</item>
    </style>

    <style name="pdlg_default_animation">
        <item name="android:windowEnterAnimation">@anim/l_pdlg_anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/l_pdlg_anim_fade_out</item>
    </style>

    <style name="pdlg_no_animation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <declare-styleable name="LAnswerView">
        <attr name="aw_ShowTextWhenActive" format="boolean" />
        <attr name="aw_NumberOfAnswers" format="integer" />
        <attr name="aw_ShowNumber" format="boolean" />
        <attr name="aw_Number" format="integer" />
        <attr name="aw_changeOnClick" format="boolean" />
        <attr name="aw_canCancelAnswer" format="boolean" />
    </declare-styleable>

    <style name="Widget.PictureInPicture.MovieView" parent="android:Widget">
        <item name="android:src">@null</item>
        <item name="android:adjustViewBounds">false</item>
    </style>

    <style name="PlayerButton">
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MusicPlayerButton">
        <item name="android:background" tools:ignore="PrivateResource">
            @drawable/abc_item_background_holo_light
        </item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MusicImageView">
        <item name="android:background" tools:ignore="PrivateResource">
            @drawable/abc_item_background_holo_light
        </item>
        <item name="android:padding">16.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScrollVertical">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroll_track</item>
        <item name="android:scrollbarSize">@dimen/w_5</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:background">#33000000</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="LightAlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/dark900</item>
        <item name="android:textColorAlertDialogListItem">@color/dark900</item>
    </style>

    <style name="DarkAlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/dark900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
    </style>

    <style name="FullDialogTheme">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowAnimationStyle">@style/FullDialogTheme.Anim</item>-->
    </style>

    <style name="FullDialogTheme.AnimLeftRight" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/l_anim_in_dialog_left_right</item>
        <item name="android:windowExitAnimation">@anim/l_anim_out_dialog_left_right</item>
    </style>

    <style name="FullDialogTheme.AnimRightLeft" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/l_anim_in_dialog_right_left</item>
        <item name="android:windowExitAnimation">@anim/l_anim_out_dialog_right_left</item>
    </style>

    <style name="rtl_RecyclerTabLayout">
        <item name="rtl_tabMinWidth">72dp</item>
        <item name="rtl_tabMaxWidth">264dp</item>
        <item name="rtl_tabIndicatorColor">?attr/colorAccent</item>
        <item name="rtl_tabIndicatorHeight">2dp</item>
        <item name="rtl_tabPaddingStart">12dp</item>
        <item name="rtl_tabPaddingEnd">12dp</item>
        <item name="rtl_tabBackground">?attr/selectableItemBackground</item>
        <item name="rtl_tabTextAppearance">@style/rtl_RecyclerTabLayout.Tab</item>
        <item name="rtl_tabSelectedTextColor">?android:textColorPrimary</item>
    </style>

    <style name="rtl_RecyclerTabLayout.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="DarkTheme">
        <item name="colorControlNormal">?attr/themeTextColor</item>
        <item name="android:textColorPrimary">?attr/themeTextColor</item>
    </style>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="themePrimaryColor">@color/colorPrimaryLight</item>
        <item name="themeTextColor">@color/black</item>
        <item name="themeBackgroundColorMedium">@color/white</item>
        <item name="themeBackgroundColor">@color/whiteSmoke</item>
        <item name="themeBackgroundColor50">@color/white50</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:colorEdgeEffect">@color/colorEdgeEffect</item>
        <item name="android:statusBarColor">@color/colorPrimaryLight</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="themePrimaryColor">@color/colorPrimaryDark</item>
        <item name="themeTextColor">@color/white</item>
        <item name="themeBackgroundColorMedium">@color/black</item>
        <item name="themeBackgroundColor">@color/dark900</item>
        <item name="themeBackgroundColor50">@color/black50</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:colorEdgeEffect">@color/colorEdgeEffect</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TranslucentActivity" parent="DarkTheme">
        <item name="android:windowBackground">#99323232</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
    </style>

    <style name="SwipeTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:colorEdgeEffect">@color/colorEdgeEffect
        </item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!--        <item name="android:windowAnimationStyle">@android:style/Animation</item>-->
    </style>

    <style name="LightSwipeTheme" parent="SwipeTheme">
        <item name="themeTextColor">@color/black</item>
        <item name="themeBackgroundColorMedium">@color/whiteSmoke</item>
        <item name="themeBackgroundColor">@color/white</item>
        <item name="themeBackgroundColor50">@color/white50</item>
        <item name="android:statusBarColor">@color/colorPrimaryLight</item>
        <item name="android:navigationBarColor">@color/colorPrimaryLight</item>
    </style>

    <style name="DarkSwipeTheme" parent="SwipeTheme">
        <item name="themeTextColor">@color/white</item>
        <item name="themeBackgroundColorMedium">@color/dark900</item>
        <item name="themeBackgroundColor">@color/black</item>
        <item name="themeBackgroundColor50">@color/black50</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomSSImagePicker" parent="SSImagePicker">
        <item name="ssToolbarBackIcon">@drawable/ic_arrow_back_ios</item>
        <item name="ssToolbarDoneTextAppearance">@style/CustomDoneTextAppearance</item>
        <item name="ssPickerGridCountLandscape">3</item>
        <item name="ssImageSelectIcon">@drawable/ic_baseline_check_circle</item>
    </style>

    <style name="CustomDoneTextAppearance" parent="SSToolbarDoneTextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <!--        <item name="android:fontFamily">@font/poppins_medium</item>-->
    </style>

    <style name="CustomPickerBottomSheet" parent="SSImagePickerBaseBottomSheetDialog">
        <item name="ssSheetCameraViewStyle">@style/PickerBottomSheetText</item>
        <item name="ssSheetGalleryViewStyle">@style/PickerBottomSheetText</item>
        <item name="ssSheetCancelViewStyle">@style/PickerBottomSheetText</item>
    </style>

    <style name="PickerBottomSheetText" parent="SSBottomSheetTextViewStyle">
        <!--        <item name="android:fontFamily">@font/poppins_medium</item>-->
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="thumbTint">@drawable/selector_switch_thumb</item>
        <item name="trackTint">@drawable/selector_switch_track</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">@dimen/_1sdp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_8sdp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="ButtonSelectorStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="strokeColor">@color/red</item>
        <item name="android:textColor">@drawable/selector_button_text_color</item>
        <item name="backgroundTint">@drawable/selector_button_bg</item>
    </style>

    <style name="PickerOptionsBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="bottomSheetStyle">@style/RoundCornerBottomSheet</item>
    </style>

    <style name="RoundCornerBottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/drawable_bottom_sheet_dialog</item>
    </style>
</resources>
