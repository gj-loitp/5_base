<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/w_1" android:color="@color/white" />
            <corners android:radius="@dimen/round_medium" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/white" android:startColor="@color/white" />
            <stroke android:width="@dimen/w_1" android:color="@color/gray" />
            <corners android:radius="@dimen/round_medium" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape>
    </item>
</selector>
