<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="loitp.core">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name">
        <!-- support 18:9 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
        <receiver android:name="vn.loitp.core.utilities.LConectifyBroadcast">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>
        <service
            android:name="vn.loitp.views.uizavideo.view.floatview.FloatingUizaVideoService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="vn.loitp.core.loitp.adhelper.AdHelperActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.core.loitp.gallery.GalleryCoreSplashActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="vn.loitp.core.loitp.gallery.GalleryCoreAlbumActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
