<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="loitp.core">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- Foreground Service permission(API level 28 or higher) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Always required on api < 21, needed to keep a wake lock while your job is running -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Required on all api levels if you are using setPersisted(true) -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true">
        <!-- support 18:9 -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <service
            android:name="vn.loitp.core.utilities.connection.LConectifyService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name="vn.loitp.core.loitp.adhelper.AdHelperActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name="vn.loitp.core.loitp.gallery.GalleryCoreSplashActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name="vn.loitp.core.loitp.gallery.album.GalleryCoreAlbumActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="vn.loitp.core.loitp.gallery.photos.GalleryCorePhotosActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="vn.loitp.core.loitp.gallery.slide.GalleryCoreSlideActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name="vn.loitp.core.loitp.facebookcomment.FacebookCommentActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />

        <service android:name="vn.loitp.views.scrog.ScrogService" />
        <service
            android:name="vn.loitp.views.ldebugview.LDebugViewService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name="vn.loitp.core.loitp.gallery.albumonly.GalleryCorePhotosOnlyActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="vn.loitp.core.loitp.gallery.member.GalleryMemberActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="vn.loitp.core.loitp.gallery.member.GalleryMemberDetailActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="vn.loitp.function.epub.core.EpubReaderReadActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
        <activity
            android:name="vn.loitp.core.loitp.admobrewardedvideo.AdmobRewardedVideoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />

        <service
            android:name="vn.loitp.core.loitp.uiza.FUZService"
            android:enabled="true"
            android:exported="false" />
        <activity
            android:name="vn.loitp.core.loitp.uiza.UZPlayerActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode" />
    </application>

</manifest>
