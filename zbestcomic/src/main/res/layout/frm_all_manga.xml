<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteSmoke"
    android:fillViewport="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bt_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/bt_toast"
            android:text="@string/choose_type"
            android:textAllCaps="false" />

        <vn.loitp.views.placeholderview.lib.placeholderview.PlaceHolderView
            android:id="@+id/galleryView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="@dimen/w_3"
            android:scrollbarThumbVertical="@drawable/scroll_thumb"
            android:scrollbarTrackVertical="@drawable/scroll_track"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="@dimen/txt_20" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/Black"
            android:textSize="@dimen/txt_10" />

        <vn.loitp.views.progressloadingview.avloadingindicatorview.lib.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView.Large"
            android:layout_width="@dimen/w_50"
            android:layout_height="@dimen/w_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_55"
            app:indicatorColor="@color/colorPrimary"
            app:indicatorName="PacmanIndicator" />
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>